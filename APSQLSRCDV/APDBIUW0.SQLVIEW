                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    AQFNCODE                                                                    :
  , AQUPDFIL                                                                    :
  , AQWAITTM                                                                    :
  , AQUPDPGM                                                                    :
  , AQMIDMOD                                                                    :
  , AQMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.AQFNCODE                                                               :
     , c.AQUPDFIL                                                               :
     , c.AQWAITTM                                                               :
     , c.AQUPDPGM                                                               :
     , c.AQMIDMOD                                                               :
     , c.AQMODE                                                                 :
  from APDBICTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.AQFNCODE                                                               :
     , b.AQUPDFIL                                                               :
     , b.AQWAITTM                                                               :
     , b.AQUPDPGM                                                               :
     , b.AQMIDMOD                                                               :
     , b.AQMODE                                                                 :
  from APDBIBTD b                                                               :
                                                                                :
  rcdfmt APDBIUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas AP Database update control information Union';                     :
