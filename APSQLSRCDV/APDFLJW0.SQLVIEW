                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       NDAPDT                                                                   :
     , NDDFLD                                                                   :
     , NDTYPE                                                                   :
     , FILNAM                                                                   :
     , FLDNAM                                                                   :
     , FLMODE                                                                   :
     , FILNMX                                                                   :
     , FLDNMX                                                                   :
     , FLMODX                                                                   :
     , FILNMD                                                                   :
     , FLDNMD                                                                   :
     , FLMODD                                                                   :
     , NDMODE                                                                   :
     , FILGDL                                                                   :           MD059264
  )                                                                             :
  as select                                                                     :
       x.NDAPDT                                                                 :
     , x.NDDFLD                                                                 :
     , u.NDTYPE                                                                 :
     , x.FILNAM                                                                 :
     , x.FLDNAM                                                                 :
     , u.FLMODE                                                                 :
     , x.FILNMX                                                                 :
     , x.FLDNMX                                                                 :
     , u.FLMODX                                                                 :
     , x.FILNMD                                                                 :
     , x.FLDNMD                                                                 :
     , u.FLMODD                                                                 :
     , u.NDMODE                                                                 :
     , x.FILGDL                                                                 :           MD059264
  from APDFLUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  APDFLXTD x                                                                    :
  on                                                                            :
  u.NDAPDT = x.NDAPDT and u.NDDFLD = x.NDDFLD                                   :
  and u.FILNAM = x.FILNAM and u.FLDNAM = x.FLDNAM                               :
  and u.FILNMX = x.FILNMX and u.FLDNMX = x.FLDNMX                               :
  and u.FILNMD = x.FILNMD and u.FLDNMD = x.FLDNMD                               :
  and x.FILGDL = 'N'                                                            :           MD059264
                                                                                :  

  rcdfmt APDFLJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas AP Input form field display modes      Joint';                     :
