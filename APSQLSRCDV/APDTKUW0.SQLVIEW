       b.APMAIN                                                                 :
     , b.APFLDS                                                                 :
     , b.APEXTN                                                                 :
     , b.APCOND                                                                 :
     , b.APCND2                                                                 :
     , b.APSEQN                                                                 :
     , b.APMODE                                                                 :
  from APDTKBTD b                                                               :
