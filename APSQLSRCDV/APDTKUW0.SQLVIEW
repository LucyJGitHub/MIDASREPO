       c.APMAIN                                                                 :
     , c.APFLDS                                                                 :
     , c.APEXTN                                                                 :
     , c.APCOND                                                                 :
     , c.APCND2                                                                 :
     , c.APSEQN                                                                 :
     , c.APMODE                                                                 :
  from APDTKCTD c                                                               :
