                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    APMAIN                                                                      :
  , APMFLD                                                                      :
  , APUEXT                                                                      :
  , APXFLD                                                                      :
  , APZONE                                                                      :
  , APCOND                                                                      :
  , APCON2                                                                      :
  , APCND2                                                                      :
  , APSEQN                                                                      :
  , APMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.APMAIN                                                                 :
     , c.APMFLD                                                                 :
     , c.APUEXT                                                                 :
     , c.APXFLD                                                                 :
     , c.APZONE                                                                 :
     , c.APCOND                                                                 :
     , c.APCON2                                                                 :
     , c.APCND2                                                                 :
     , c.APSEQN                                                                 :
     , c.APMODE                                                                 :
  from APUDKCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.APMAIN                                                                 :
     , b.APMFLD                                                                 :
     , b.APUEXT                                                                 :
     , b.APXFLD                                                                 :
     , b.APZONE                                                                 :
     , b.APCOND                                                                 :
     , b.APCON2                                                                 :
     , b.APCND2                                                                 :
     , b.APSEQN                                                                 :
     , b.APMODE                                                                 :
  from APUDKBTD b                                                               :
                                                                                :
  rcdfmt APUDKUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas API Main-UDF Extension Common Fields Union';                       :
