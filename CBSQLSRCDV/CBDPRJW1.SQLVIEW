                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       DIDSON                                                                   :
     , DIDSOS                                                                   :
     , DIDRUN                                                                   :
     , DIDDON                                                                   :
     , DIDDOS                                                                   :
     , DICDST                                                                   :
     , DIMODE                                                                   :
     , DILOGD                                                                   :
  )                                                                             :
  as select                                                                     :
       x.DIDSON                                                                 :
     , x.DIDSOS                                                                 :
     , x.DIDRUN                                                                 :
     , x.DIDDON                                                                 :
     , x.DIDDOS                                                                 :
     , u.DICDST                                                                 :
     , x.DIMODE                                                                 :
     , x.DILOGD                                                                 :
  from CBDPRUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  CBDPRXTD x                                                                    :
  on                                                                            :
      u.DIDSON = x.DIDSON and u.DIDSOS = x.DIDSOS and                           :
      u.DIDRUN = x.DIDRUN                                                       :
                                                                                :
  rcdfmt CBDPRJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas CB Dependency Relations Joint             ';                       :
