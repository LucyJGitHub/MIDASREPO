     C           *IN99     IFEQ '1'
     C*
     C                     MOVEL*BLANK    COHO
     C                     MOVEL*BLANK    DTPR
     C*
     C                     WRITEDLDTSCD3
     C                     END
     C                     END
     C*
     C**  Update year/month according to frequency
     C*
     C           SACTN     IFEQ 'M'
     C                     ADD  1         MTHN
     C                     END
     C           SACTN     IFEQ 'Q'
     C                     ADD  3         MTHN
     C                     END
     C           SACTN     IFEQ 'X'
     C                     ADD  6         MTHN
     C                     END
     C           SACTN     IFEQ 'Y'
     C                     ADD  1         YRNO
     C                     END
     C*
     C**  If past end of year
     C*
     C           MTHN      IFGT 12
     C                     ADD  1         YRNO
