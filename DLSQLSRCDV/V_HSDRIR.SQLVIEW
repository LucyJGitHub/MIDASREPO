  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  CMODID,                                                                       :
  CTRNID,                                                                       :
  CINFLG,                                                                       :
  CINPDT,                                                                       :
  CINPDY,                                                                       :
  COBPDT,                                                                       :
  COBPDY,                                                                       :
  CPBRFR,                                                                       :
  CRTEAP,                                                                       :   
    CASE CCALCM                                                                 :  
     WHEN 'NCCR' THEN CDCMRT                                                    :  
     WHEN 'SARR' THEN CRTEAP                                                    :   
     WHEN 'CCR'  THEN CAVCRT                                                    : 
     WHEN 'SAVG' THEN CSMPAV                                                    : 
     END AS CAVCRT,                                                             :                                                                  :
  CASE WHEN CINPDT = 0 THEN NULL ELSE DATE(CINPDT+719892) END AS CMINPDT,       :
  CASE WHEN COBPDT = 0 THEN NULL ELSE DATE(COBPDT+719892) END AS CMOBPDT        :
  FROM                                                                          :
  SDHSDRTD                                                                      :
  WHERE CMODID = 'RU' OR CMODID = 'RT';                                         :
                                                                                :
  LABEL ON COLUMN **********/**********                                         :
   (CAVCRT IS 'Average/Compounded  Rate');                                      :
 * DESCRIBESTART                                                                :
 * DESCRIBEFIELD CMINPDT    AS CINPDT     USING SDHSDRTD                        :
 * DESCRIBEFIELD CMOBPDT    AS COBPDT     USING SDHSDRTD                        :
 * DESCRIBEEND                                                                  :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas IRS Daily Rates History ';                                         :
