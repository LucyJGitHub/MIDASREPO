                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    D3RNAM                                                                      :
  , AESARN                                                                      :
  , AEAVAL                                                                      :
****SARD************************************************************************:           MD055681
  , SARN                                                                        :           MD055681
  , D3COTT                                                                      :
  , D3CSEQ                                                                      :
  , D3MORQ                                                                      :
  , D3CLPM                                                                      :
  , D3PRPG                                                                      :
  , D3ADTX                                                                      :
  , D3BRTP                                                                      :
  , D3MODE                                                                      :
  , ENABLD                                                                      :           MD055681
  )                                                                             :
  as                                                                            :
  select                                                                        :
       u.D3RNAM                                                                 :
     , v.AESARN                                                                 :
     , v.AEAVAL                                                                 :
*****,*w.SARD*******************************************************************:           MD055681
     , w.SARN                                                                   :           MD055681
     , u.D3COTT                                                                 :
     , u.D3CSEQ                                                                 :
     , u.D3MORQ                                                                 :
     , u.D3CLPM                                                                 :
     , u.D3PRPG                                                                 :
     , u.D3ADTX                                                                 :
     , u.D3BRTP                                                                 :
     , u.D3MODE                                                                 :
     , w.ENABLD                                                                 :           MD055681
  FROM FCRCOJW0 u                                                               :
  LEFT OUTER JOIN SCSARMPD v on                                                 :
  ( u.D3RNAM = v.AERNAM AND u.D3COTT = v.AECOTT AND u.D3CSEQ = v.AECSEQ )       :
**LEFT*OUTER*JOIN*SCSARDPD*w*on*************************************************:           MD055681
  LEFT OUTER JOIN SCSRDXTD w on                                                 :           MD055681
  ( v.AESARN = w.SARN )                                                         :
                                                                                :
  WHERE                                                                         :
  v.AESARN IS NULL OR                                                           :
**(*v.AESARN*IS*NOT*NULL*AND*w.SARD*IS*NOT*NULL*AND*v.AEAVAL*=*'Y'*)*OR*********:           MD055681
  ( v.AESARN IS NOT NULL AND w.SARN IS NOT NULL AND v.AEAVAL = 'Y'              :           MD055681
    and w.ENABLD = 'E' ) OR                                                     :           MD055681
**(*v.AESARN*IS*NOT*NULL*AND*w.SARD*IS*NULL*AND*v.AEAVAL*=*'N'*)****************:           MD055681
  ( v.AESARN IS NOT NULL AND w.SARN IS NULL AND v.AEAVAL = 'N' )                :           MD055681
  or ( v.AESARN IS NOT NULL AND w.SARN IS NOT NULL AND v.AEAVAL = 'N'           :           MD056948
    and w.ENABLD = 'D' )                                                        :           MD056948
  RCDFMT FCRCOJD1   ;                                                           :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas FC Join rep comp to switch feature' ;                              :
                                                                                :
