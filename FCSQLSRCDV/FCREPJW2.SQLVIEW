**AND*DXCLBP*=*'N'*)*OR*********************************************************:           MD055681
  ( AHSARN <> ' ' AND SARN <> ' ' AND AHAVAL = 'Y' AND DXIPCY = 'N'             :           MD055681
  AND DXCLBP = 'N' AND ENABLD = 'E' ) OR                                        :           MD055681
**(*AHSARN*<>*' '*AND*SARD*IS*NULL*AND*AHAVAL*=*'N'*AND*DXIPCY*=*'N'************:           MD055681
  ( AHSARN <> ' ' AND SARN IS NULL AND AHAVAL = 'N' AND DXIPCY = 'N'            :           MD055681
  AND DXCLBP =  'N' )                                                           :
  or ( AHSARN <> ' ' AND SARN <> ' ' AND AHAVAL = 'N' AND DXIPCY = 'N'          :           MD056948
  AND DXCLBP = 'N' AND ENABLD = 'D' )                                           :           MD056948
