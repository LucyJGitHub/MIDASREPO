  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (BHCUST ,                                                                     :
   BHCODE ,                                                                     :
   BHCYCD ,                                                                     :
   BHCOAM )                                                                     :
   AS                                                                           :
   SELECT BHCUST,BHCODE,BHCYCD,BHCOAM FROM SDFOCSPD ;                           :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
   ( BHCUST IS 'Customer            Number' ,                                   :
    BHCODE IS 'Collateral          Description' ,                               :
    BHCYCD IS 'Currency            code' ,                                      :
    BHCOAM IS 'Collateral          Amount' ) ;                                  :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
   ( BHCUST TEXT IS 'Customer Number' ,                                         :
    BHCODE TEXT IS 'Collateral Description' ,                                   :
    BHCYCD TEXT IS 'Currency Code' ,                                            :
    BHCOAM TEXT IS 'Collateral Amount' ) ;                                      :
