                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    TRTYPE                                                                      :
  , TRNDSC                                                                      :
  , RCVINT                                                                      :
  , PAYGEN                                                                      :
  , COREDL                                                                      :
  , TRMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.TRTYPE                                                                 :
     , c.TRNDSC                                                                 :
     , c.RCVINT                                                                 :
     , c.PAYGEN                                                                 :
     , c.COREDL                                                                 :
     , c.TRMODE                                                                 :
  from FTTRTCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.TRTYPE                                                                 :
     , b.TRNDSC                                                                 :
     , b.RCVINT                                                                 :
     , b.PAYGEN                                                                 :
     , b.COREDL                                                                 :
     , b.TRMODE                                                                 :
  from FTTRTBTD b                                                               :
                                                                                :
  rcdfmt FTTRTUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas FT Transaction Type Codes              Union';                     :
