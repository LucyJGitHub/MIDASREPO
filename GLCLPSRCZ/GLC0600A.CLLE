/* GLC600A07 Subroutine                                            */                   /*MD037383*/
                                                                                        /*MD037383*/
             SUBR       SUBR(GLC600A07)                                                 /*MD037383*/
                                                                                        /*MD037383*/
/* Reset job switches                                              */                   /*MD037383*/
                                                                                        /*MD037383*/
/*           CHGJOB     SWS(000000XX) */                                      /*MD037383**MD039002*/
             CHGJOB     SWS(100000XX)                                                   /*MD039002*/
                                                                                        /*MD037383*/
/* Check if Retail is on OR Interest on Accounts is on:            */                   /*MD037383*/
