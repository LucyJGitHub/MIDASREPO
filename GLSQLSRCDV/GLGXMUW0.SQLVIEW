     c.XMORDR                                                                   :
   , c.XMELMT                                                                   :
   , c.XMTPMT                                                                   :
   , c.XMLEVL                                                                   :
   , c.XMTLIN                                                                   :
   , c.XMREPR                                                                   :
   , c.XMNMSP                                                                   :
   , c.XMFLDA                                                                   :
   , c.XMMODE                                                                   :
  from GLGXMCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
     b.XMORDR                                                                   :
   , b.XMELMT                                                                   :
   , b.XMTPMT                                                                   :
   , b.XMLEVL                                                                   :
   , b.XMTLIN                                                                   :
   , b.XMREPR                                                                   :
   , b.XMNMSP                                                                   :
   , b.XMFLDA                                                                   :
   , b.XMMODE                                                                   :
  from GLGXMBTD b                                                               :
