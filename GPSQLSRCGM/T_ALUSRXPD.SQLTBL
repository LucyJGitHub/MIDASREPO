    NO CYCLE NO ORDER                                                           :
    CACHE 20 ),                                                                 :
    TUUSRP CHAR(10) DEFAULT NULL ,                                              :
    TUGPHID NUMERIC(15, 0) DEFAULT NULL ,                                       :
    CONSTRAINT PK_TUID PRIMARY KEY( TUID ) ) ;                                  :
                                                                                :
  LABEL ON TABLE T_ALUSRXPD                                                     :
    IS 'Transaction Limits User Cross Reference' ;                              :
