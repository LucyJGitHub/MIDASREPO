  LABEL ON COLUMN T_ALUSRXPD                                                    :
  ( TUID    TEXT IS 'User Cross Reference Id' ,                                 :
    TUUSRP  TEXT IS 'User Profile' ,                                            :
    TUGPHID TEXT IS 'Transaction Limit Group' ) ;                               :
                                                                                :
  LABEL ON COLUMN T_ALUSRXPD                                                    :
  ( TUID    IS 'User Cross          Reference Id' ,                             :
    TUUSRP  IS 'User Profile' ,                                                 :
    TUGPHID IS 'Transaction         Limit Group' ) ;                            :
