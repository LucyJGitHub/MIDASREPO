                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    NDAPDT                                                                      :
  , NDDFLD                                                                      :
  , NDTYPE                                                                      :
  , FILNAM                                                                      :
  , FLDNAM                                                                      :
  , FLMODE                                                                      :
  , FILNMX                                                                      :
  , FLDNMX                                                                      :
  , FLMODX                                                                      :
  , NDMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.NDAPDT                                                                 :
     , c.NDDFLD                                                                 :
     , c.NDTYPE                                                                 :
     , c.FILNAM                                                                 :
     , c.FLDNAM                                                                 :
     , c.FLMODE                                                                 :
     , c.FILNMX                                                                 :
     , c.FLDNMX                                                                 :
     , c.FLMODX                                                                 :
     , c.NDMODE                                                                 :
  from GPDFLCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.NDAPDT                                                                 :
     , b.NDDFLD                                                                 :
     , b.NDTYPE                                                                 :
     , b.FILNAM                                                                 :
     , b.FLDNAM                                                                 :
     , b.FLMODE                                                                 :
     , b.FILNMX                                                                 :
     , b.FLDNMX                                                                 :
     , b.FLMODX                                                                 :
     , b.NDMODE                                                                 :
  from GPDFLBTD b                                                               :
                                                                                :
  rcdfmt GPDFLUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Global input form field display mod Union';                     :
