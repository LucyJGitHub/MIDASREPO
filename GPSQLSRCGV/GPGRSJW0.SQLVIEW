                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       GROBJ                                                                    :
     , GRTYPE                                                                   :
     , GRMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.GROBJ                                                                  :
     , x.GRTYPE                                                                 :
     , u.GRMODE                                                                 :
  from GPGRSUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  GPGRSXTD x                                                                    :
  on                                                                            :
  u.GROBJ = x.GROBJ and u.GRTYPE = x.GRTYPE                                     :
                                                                                :
  rcdfmt GPGRSJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Global Objects Restored in PEA Syst Joint';                     :
