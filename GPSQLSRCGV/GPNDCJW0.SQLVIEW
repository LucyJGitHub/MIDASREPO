                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       NCAPDT                                                                   :
     , NCDFLD                                                                   :
     , NCSEQN                                                                   :
     , NCTYPE                                                                   :
     , NCMDFN                                                                   :
     , NCMODF                                                                   :
     , NCMINS                                                                   :
     , NCLOGC                                                                   :
     , NCMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.NCAPDT                                                                 :
     , x.NCDFLD                                                                 :
     , x.NCSEQN                                                                 :
     , x.NCTYPE                                                                 :
     , u.NCMDFN                                                                 :
     , u.NCMODF                                                                 :
     , u.NCMINS                                                                 :
     , u.NCLOGC                                                                 :
     , x.NCMODE                                                                 :
  from GPNDCUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  GPNDCXTD x                                                                    :
  on                                                                            :
      u.NCAPDT = x.NCAPDT and u.NCDFLD = x.NCDFLD and x.NCSEQN = u.NCSEQN       :
      and u.NCTYPE = x.NCTYPE                                                   :
                                                                                :
  rcdfmt GPNDCJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP No Display field conditions Joint     ';                        :
                                                                                :
