  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       GLDIND                                                                   :
     , GLHIND                                                                   :
     , GLLANG                                                                   :
     , GLVDTA                                                                   :
     , GLDESC                                                                   :
     , GLMMSN                                                                   :
     , GLZONE                                                                   :
     , GLMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       u.GLDIND                                                                 :
     , u.GLHIND                                                                 :
     , u.GLLANG                                                                 :
     , u.GLVDTA                                                                 :
     , u.GLDESC                                                                 :
     , u.GLMMSN                                                                 :
     , u.GLZONE                                                                 :
     , x.GLMODE                                                                 :
  from GPPWNUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  GPPWNXTD x                                                                    :
  on                                                                            :
      u.GLHIND = x.GLHIND and u.GLDIND = x.GLDIND                               :
  rcdfmt GPPWNJT0;                                                              :
