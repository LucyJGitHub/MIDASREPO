                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    GLDIND                                                                      :
  , GLHIND                                                                      :
  , GLLANG                                                                      :
  , GLVDTA                                                                      :
  , GLDESC                                                                      :
  , GLMMSN                                                                      :
  , GLZONE                                                                      :
  , GLMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.GLDIND                                                                 :
     , c.GLHIND                                                                 :
     , c.GLLANG                                                                 :
     , c.GLVDTA                                                                 :
     , c.GLDESC                                                                 :
     , c.GLMMSN                                                                 :
     , c.GLZONE                                                                 :
     , c.GLMODE                                                                 :
  from GPPWNCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.GLDIND                                                                 :
     , b.GLHIND                                                                 :
     , b.GLLANG                                                                 :
     , b.GLVDTA                                                                 :
     , b.GLDESC                                                                 :
     , b.GLMMSN                                                                 :
     , b.GLZONE                                                                 :
     , b.GLMODE                                                                 :
  from GPPWNBTD b                                                               :
                                                                                :
  rcdfmt GPPWNUT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Midas system pulldown lists Union      ';                       :
