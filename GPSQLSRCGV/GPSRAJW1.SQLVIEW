/******************************************************************************/
                                                                                :
  CREATE VIEW                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       SASARN                                                                   :
     , SAOBJ                                                                    :
     , SATYPE                                                                   :
     , SADEPN                                                                   :
     , SADEL                                                                    :
  )                                                                             :
  AS SELECT                                                                     :
       U.SASARN                                                                 :
     , U.SAOBJ                                                                  :
     , U.SATYPE                                                                 :
     , U.SADEPN                                                                 :
     , U.SADEL                                                                  :
  FROM GPSRAJW0 U                                                               :
                                                                                :
  LEFT OUTER JOIN SCSARDPD W ON ( U.SASARN = W.SARN )                           :
  WHERE U.SADEL = 'N'                                                           :
  ;                                                                             :
  LABEL ON TABLE     **********/**********                                      :
   IS 'MIDAS SC 24X7 GLOBAL DB SWITCHABLE JOIN FILE';                           :
