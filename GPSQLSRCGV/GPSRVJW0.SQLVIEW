                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       GSSVAL                                                                   :
     , GSSARN                                                                   :
     , GSLCD                                                                    :
     , GSLCT                                                                    :
     , GSMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.GSSVAL                                                                 :
     , x.GSSARN                                                                 :
     , u.GSLCD                                                                  :
     , u.GSLCT                                                                  :
     , u.GSMODE                                                                 :
  from GPSRVUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  GPSRVXTD x                                                                    :
  on                                                                            :
      u.GSSVAL = x.GSSVAL and u.GSSARN = x.GSSARN                               :
                                                                                :
  rcdfmt GPSRVJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Midas switchable system values Joint   ';                       :
