/*******************************************************************************/
                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       GISVAL                                                                   :
     , GIMMOD                                                                   :
     , GIMMSN                                                                   :
     , GIDESC                                                                   :
     , GIVAL                                                                    :
     , GIDFT                                                                    :
     , GIHELP                                                                   :
     , GIATTR                                                                   :
     , GIDLEN                                                                   :
     , GISUPP                                                                   :
     , GISWCH                                                                   :
     , GIJUST                                                                   :
     , GIALWB                                                                   :
     , GIEMSG                                                                   :
     , GILCD                                                                    :
     , GILCT                                                                    :
     , GIMODE                                                                   :
     , GSSARN                                                                   :
     , SARN                                                                     :
     , GSAVAL                                                                   :
     , FOMMIN                                                                   :
  )                                                                             :
  as select                                                                     :
       u.GISVAL                                                                 :
     , u.GIMMOD                                                                 :
     , u.GIMMSN                                                                 :
     , u.GIDESC                                                                 :
     , u.GIVAL                                                                  :
     , u.GIDFT                                                                  :
     , u.GIHELP                                                                 :
     , u.GIATTR                                                                 :
     , u.GIDLEN                                                                 :
     , u.GISUPP                                                                 :
     , u.GISWCH                                                                 :
     , u.GIJUST                                                                 :
     , u.GIALWB                                                                 :
     , u.GIEMSG                                                                 :
     , u.GILCD                                                                  :
     , u.GILCT                                                                  :
     , u.GIMODE                                                                 :
     , v.GSSARN                                                                 :
     , w.SARN                                                                   :
     , v.GSAVAL                                                                 :
     , x.FOMMIN                                                                 :
  FROM GPSVLJW0 u                                                               :
  LEFT OUTER JOIN GPSARVPD v ON ( u.GISVAL = v.GSSVAL )                         :
  LEFT OUTER JOIN GPSARDPD w ON ( v.GSSARN = w.SARN )                           :
  LEFT OUTER JOIN GPMMIDPD x ON ( u.GIMMSN = x.FOMMSN )                         :
  WHERE                                                                         :
  ( v.GSSARN IS NULL AND x.FOMMIN = 'Y' )                                       :
  OR                                                                            :
  ( v.GSSARN IS NOT NULL AND w.SARN IS NOT NULL AND v.GSAVAL = 'Y'              :
  AND x.FOMMIN = 'Y' )                                                          :
  OR                                                                            :
  ( v.GSSARN IS NOT NULL AND w.SARN IS NULL AND v.GSAVAL = 'N'                  :
  AND x.FOMMIN = 'Y' )                                                          :
  RCDFMT @SVALJ0    ;                                                           :
                                                                                :
  LABEL ON TABLE **********/**********                                          :
  IS 'Midas GP Available Midas system values' ;                                 :
                                                                                :
