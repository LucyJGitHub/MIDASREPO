                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
    GJRECI                                                                      :
  , GJSVAL                                                                      :
  , GJSEQ                                                                       :
  , GJVDTA                                                                      :
  , GJDESC                                                                      :
  , GJMODE                                                                      :
  )                                                                             :
  as select                                                                     :
    u.GJRECI                                                                    :
  , u.GJSVAL                                                                    :
  , u.GJSEQ                                                                     :
  , u.GJVDTA                                                                    :
  , u.GJDESC                                                                    :
  , u.GJMODE                                                                    :
  from GPSVRUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  GPSVRXTD x                                                                    :
  on                                                                            :
      u.GJSVAL = x.GJSVAL and u.GJSEQ = x.GJSEQ and u.GJVDTA = x.GJVDTA         :
  rcdfmt GPSVRJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP System Val core and bespoke join';                              :
