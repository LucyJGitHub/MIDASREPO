                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    GJRECI                                                                      :
  , GJSVAL                                                                      :
  , GJSEQ                                                                       :
  , GJVDTA                                                                      :
  , GJDESC                                                                      :
  , GJMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.GJRECI                                                                 :
     , c.GJSVAL                                                                 :
     , c.GJSEQ                                                                  :
     , c.GJVDTA                                                                 :
     , c.GJDESC                                                                 :
     , c.GJMODE                                                                 :
  from GPSVRCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.GJRECI                                                                 :
     , b.GJSVAL                                                                 :
     , b.GJSEQ                                                                  :
     , b.GJVDTA                                                                 :
     , b.GJDESC                                                                 :
     , b.GJMODE                                                                 :
  from GPSVRBTD b                                                               :
                                                                                :
  rcdfmt GPSVRUT0;                                                              :
