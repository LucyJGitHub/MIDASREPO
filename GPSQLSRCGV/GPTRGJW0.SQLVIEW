                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       TRACTV                                                                   :
     , TRFILE                                                                   :
     , TRTIME                                                                   :
     , TREVNT                                                                   :
     , TRSEQ                                                                    :
     , TRPGM                                                                    :
     , TRPGML                                                                   :
     , TRUNQI                                                                   :
     , TRMMSN                                                                   :
     , TRMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       u.TRACTV                                                                 :
     , x.TRFILE                                                                 :
     , x.TRTIME                                                                 :
     , x.TREVNT                                                                 :
     , x.TRSEQ                                                                  :
     , u.TRPGM                                                                  :
     , u.TRPGML                                                                 :
     , u.TRUNQI                                                                 :
     , u.TRMMSN                                                                 :
     , x.TRMODE                                                                 :
  from GPTRGUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  GPTRGXTD x                                                                    :
  on                                                                            :
      u.TRFILE = x.TRFILE and u.TRTIME = x.TRTIME and                           :
      u.TREVNT = x.TREVNT and u.TRSEQ = x.TRSEQ                                 :
                                                                                :
  rcdfmt GPTRGJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Midas trigger programs Joint      ';                            :
