                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    TRACTV                                                                      :
  , TRFILE                                                                      :
  , TRTIME                                                                      :
  , TREVNT                                                                      :
  , TRSEQ                                                                       :
  , TRPGM                                                                       :
  , TRPGML                                                                      :
  , TRUNQI                                                                      :
  , TRMMSN                                                                      :
  , TRMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.TRACTV                                                                 :
     , c.TRFILE                                                                 :
     , c.TRTIME                                                                 :
     , c.TREVNT                                                                 :
     , c.TRSEQ                                                                  :
     , c.TRPGM                                                                  :
     , c.TRPGML                                                                 :
     , c.TRUNQI                                                                 :
     , c.TRMMSN                                                                 :
     , c.TRMODE                                                                 :
  from GPTRGCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.TRACTV                                                                 :
     , b.TRFILE                                                                 :
     , b.TRTIME                                                                 :
     , b.TREVNT                                                                 :
     , b.TRSEQ                                                                  :
     , b.TRPGM                                                                  :
     , b.TRPGML                                                                 :
     , b.TRUNQI                                                                 :
     , b.TRMMSN                                                                 :
     , b.TRMODE                                                                 :
  from GPTRGBTD b                                                               :
                                                                                :
  rcdfmt GPTRGUT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Midas trigger programs Union    ';                              :
