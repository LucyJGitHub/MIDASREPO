                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       PGM                                                                      :
     , DEALTYPE                                                                 :
     , DESCR                                                                    :
     , PGMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.PGM                                                                    :
     , x.DEALTYPE                                                               :
     , u.DESCR                                                                  :
     , u.PGMODE                                                                 :
  from T_DLTUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  T_DLTXTD x                                                                    :
  on                                                                            :
  u.PGM = x.PGM and u.DEALTYPE = x.DEALTYPE                                     :
                                                                                :
  rcdfmt T_DLTJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Deal Types                          Joint';                     :
