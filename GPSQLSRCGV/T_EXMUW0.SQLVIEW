                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    EXTYPE                                                                      :
  , EXWARNCODE                                                                  :
  , EXAPI                                                                       :
  , EXMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.EXTYPE                                                                 :
     , c.EXWARNCODE                                                             :
     , c.EXAPI                                                                  :
     , c.EXMODE                                                                 :
  from T_EXMCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.EXTYPE                                                                 :
     , b.EXWARNCODE                                                             :
     , b.EXAPI                                                                  :
     , b.EXMODE                                                                 :
  from T_EXMBTD b                                                               :
                                                                                :
  rcdfmt T_EXMUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Exception - Warning Map             Union';                     :
