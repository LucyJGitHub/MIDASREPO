                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    LDORDER                                                                     :
  , LDTABLE                                                                     :
  , LDFIELD                                                                     :
  , LDMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.LDORDER                                                                :
     , c.LDTABLE                                                                :
     , c.LDFIELD                                                                :
     , c.LDMODE                                                                 :
  from T_MLLCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.LDORDER                                                                :
     , b.LDTABLE                                                                :
     , b.LDFIELD                                                                :
     , b.LDMODE                                                                 :
  from T_MLLBTD b                                                               :
                                                                                :
  rcdfmt T_MLLUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Limit Dependencies                  Union';                     :
