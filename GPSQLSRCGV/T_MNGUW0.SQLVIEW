                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    MGID                                                                        :
  , MGHYID                                                                      :
  , MGNAME                                                                      :
  , MGDELETED                                                                   :
  , MGMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.MGID                                                                   :
     , c.MGHYID                                                                 :
     , c.MGNAME                                                                 :
     , c.MGDELETED                                                              :
     , c.MGMODE                                                                 :
  from T_MNGCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.MGID                                                                   :
     , b.MGHYID                                                                 :
     , b.MGNAME                                                                 :
     , b.MGDELETED                                                              :
     , b.MGMODE                                                                 :
  from T_MNGBTD b                                                               :
                                                                                :
  rcdfmt T_MNGUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas GP Menu subgroup                       Union';                     :
