                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    SMMOD                                                                       :
  , SMSMOD                                                                      :
  , SMICDE                                                                      :
  , SMMODDESC                                                                   :
  , SMMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.SMMOD                                                                  :
     , c.SMSMOD                                                                 :
     , c.SMICDE                                                                 :
     , c.SMMODDESC                                                              :
     , c.SMMODE                                                                 :
  from T_SMOCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.SMMOD                                                                  :
     , b.SMSMOD                                                                 :
     , b.SMICDE                                                                 :
     , b.SMMODDESC                                                              :
     , b.SMMODE                                                                 :
  from T_SMOBTD b                                                               :
