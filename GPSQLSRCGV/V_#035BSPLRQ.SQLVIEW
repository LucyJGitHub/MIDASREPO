  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT SCRQTYP,SCRQID,SCZNGL,SCZONE,                                          :
  SCBRC,SCBRGRP, BGNAME,SCBRCON,SCRPSET,                                        :
  SCHDPTH,SCCHART,SCRELPN,SCCYR,                                                :
  SCCMTH,SCRPTYP,SCRMDUR,                                                       :
  SCINT,SCINTCCY,SCINTCNV,                                                      :
  SCINTCZN,SCREP,SCREPCCY,                                                      :
  SCREPCNV,SCREPCZN,SCACDBD,                                                    :
  SCPRTZB,SCROUND,SCIFCTFR,SCIBCTFR,                                            :
  SCINSID,SCDESC,SCRFREQ,SCRDAYN,                                               :
  DATE(SCRDATE + 719892) AS SCRDATE,SCCHTP,SCUSER                               :
  SCINCAV,SCINAPD,SCINAPE,SCRPCAV,SCRPAPD,SCRPAPE                               :             CAS014
  FROM GPBSRQPD BSRQ                                                            :
  LEFT JOIN T_GRBRCHG  BRCHG ON BSRQ.SCBRGRP=CAST(BRCHG.BGID AS VARCHAR(15))    :
                                                                                :
