  CREATE VIEW                                                                   :
  **********/**********                                                         :
  ( TMUSRP , TMZONE , TMBRCA , TMMOD , TMCCY , TMINLIM ,
    TMAULIM , TMCINLIM , TMCAULIM , TMGPID )
   AS SELECT
      TUUSRP AS TMUSRP,
      A8ZONE AS TMZONE,
      THBRCA AS TMBRCA,
      TMMOD AS TMMOD,
      TMCCY AS TMCCY,
      TMINLIM,
      TMAULIM,
      TMCINLIM,
      TMCAULIM,
      TMGPID
   FROM  T_ALTIMHD,
         T_ALTIMMD,
         GZSDBRCHPD,
         T_ALUSRXPD
   WHERE TMHID = THGPID
     AND THBRCA = A8BRCD
     AND THGPID = TUGPHID ;
                                                                                :
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas Authorisation Limits Validation Amounts     ';                     :
