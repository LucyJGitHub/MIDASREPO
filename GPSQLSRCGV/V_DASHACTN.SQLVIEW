  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
      DLMSID,                                                                   :
      DLKEYD,                                                                   :
      CAST(DLVAL AS NUMERIC(5,0)) AS DLVAL,                                     :
/*****DLMPRM*******************************************************************/:             CCB023
      DLMPRM,                                                                                 CCB023
      DLUATH                                                                                  CCB023
  FROM GPDWNLPD                                                                 :
  WHERE DLVAL <>''                                                              :
  AND DLUATH = 'Y'                                                              :           MD020661
  OR DLVAL <>''                                                                 :          MD020661A
  AND DLUATH = 'W'                                                              :          MD020661A
/*--Filter for Unauthorised Items and Batches Not accepted.*********************/
