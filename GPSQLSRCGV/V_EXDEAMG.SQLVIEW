  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  EX.ZONE, EX.DDDLNO, EX.DDVDAT, EX.DDDS38                                      :
  FROM T_GZDEAMEX EX                                                            :
  LEFT EXCEPTION JOIN V_MMDLAMD  PP ON                                          :
  EX.DDDLNO = PP.HNDA38 AND EX.DDDS38 = PP.HNDS38 AND EX.DDVDAT = PP.FHNDVSD    :
  AND EX.ZONE = PP.CUSTZONE                                                     :
