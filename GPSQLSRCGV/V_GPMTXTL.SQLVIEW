/************************************************************************************/
  CREATE VIEW                                                                        :
  **********/**********                                                              :
  AS                                                                                 :
  SELECT                                                                             :
   MIINDX,MIINAR FROM GPMTXTPD                                                       :
   UNION ALL                                                                         :
   SELECT CHAR(('*SN') CONCAT CAST ((MHID) AS CHAR (10)))                            :
   AS MIINDX, MHNAME AS MIINAR FROM T_GRMENUH                                        :
   UNION ALL                                                                         :
   SELECT CHAR(('*SS') CONCAT CAST ((MHID) AS CHAR (10)))                            :
   AS MIINDX, MHNAME AS MIINAR FROM T_GRMENUH                                        :
   WHERE MHTYPE='SUB'                                                                :
/************************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas GZ SD Menu items and submenus               ';                     :
