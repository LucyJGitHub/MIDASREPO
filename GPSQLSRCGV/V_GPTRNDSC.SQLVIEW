  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT 'DL' AS MODULE,                                                        :
  DTPE11 AS TRAN_TYPE,                                                          :
  DLST11 AS SUB_TYPE,                                                           :
  FDZONE AS ZONE,                                                               :
  NARR11 AS NARRATIVE FROM                                                      :
  GZFDDTSTPD                                                                    :
  UNION ALL                                                                     :
  SELECT 'LE' AS MODULE,                                                        :
  AYLNTY AS TRAN_TYPE,                                                          :
  AYLNST AS SUB_TYPE,                                                           :
  AYZONE AS ZONE,                                                               :
  AYLNTD AS NARRATIVE FROM                                                      :
  GZSDLOANPD                                                                    :
  UNION ALL                                                                     :
  SELECT 'SE' AS MODULE,                                                        :
  INVT AS TRAN_TYPE,                                                            :
  CCYI AS SUB_TYPE,                                                             :
  INZONE AS ZONE,                                                               :
  INAM AS NARRATIVE FROM                                                        :
  GZINVTPD                                                                      :
  UNION ALL                                                                     :
  SELECT 'FF' AS MODULE,                                                        :
  FOPROCTYPE AS TRAN_TYPE,                                                      :
  '' AS SUB_TYPE,                                                               :
  ZOZONE AS ZONE,                                                               :
  FONARR AS NARRATIVE FROM                                                      :
  T_GPFOTYPE, GPZONEPD                                                          :
  UNION ALL                                                                     :
  SELECT 'MT' AS MODULE,                                                        :
  MTTRTP AS TRAN_TYPE,                                                          :
  MTTRST AS SUB_TYPE,                                                           :
  ''  AS ZONE,                                                                  :
  MTDESC AS NARRATIVE FROM                                                      :
  GPMTSTPD;                                                                     :
