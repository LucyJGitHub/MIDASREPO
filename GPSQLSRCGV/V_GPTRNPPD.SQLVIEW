  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  GPTRAPPD.T_ID,GPTRAPPD.T_ZONE, GPTRAPPD.T_MOD, GPTRAPPD.T_SMOD,               :
  GPTRAPPD.T_BRCA,GPTRAPPD.T_BOOK,GPTRAPPD.T_ACCY,GPTRAPPD.T_ACSQ,              :
  GPTRAPPD.T_ACOD,                                                              :
  GPTRAPPD.T_SESN,GPTRAPPD.T_MKTI,GPTRAPPD.T_ISTT, GPTRAPPD.T_YRNO,             :
  GPTRAPPD.T_MTHN,GPTRAPPD.T_PCAL,GPTRAPPD.T_STRP, GPTRAPPD.T_TREF,             :
  GPTRAPPD.T_TDAT,GPTRAPPD.T_SDAT,GPTRAPPD.T_EDAT, GPTRAPPD.T_TRTP,             :
  GPTRAPPD.T_TRST,GPTRAPPD.T_TPFC,GPTRAPPD.T_RCST, GPTRAPPD.T_RCCY,             :
  GPTRAPPD.T_LICD,GPTRAPPD.T_CNCD,GPTRAPPD.T_MKVL, GPTRAPPD.T_VCCY,             :
  GPTRAPPD.T_RCSI,GPTRAPPD.T_ISEI,GPTRAPPD.T_RLDO,GPTRAPPD.T_MATI,              :
  GPTRAPPD.T_GCOB,GPTRAPPD.T_ACTN,GPTRAPPD.T_CCID,                              :
  GPGLCUSL.CGGLOB,GPGLCUSL.CGCSSN,GPGLCUSL.CGNA1,                               :
  GPPOSNPD.P_TVDI,GPPOSNPD.P_ASLI,                                              :
**DIGITS(T_CNUM)*AS*PADCNUM,****************************************************:           BUG12392
  T_CNUM AS PADCNUM,                                                            :           BUG12392
  T_SMODSEC.SMSMOD,T_SMODSEC.SMMODDESC                                          :
  FROM GPTRAPPD                                                                 :
  LEFT JOIN GPGLCUSL ON T_ZONE = CGZONE AND T_CNUM=CGCNUM                       :
  LEFT JOIN GPPOSNPD ON P_ID=T_ID                                               :
  LEFT JOIN T_SMODSEC ON T_SMOD=SMSMOD ;                                        :
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas GP Global Transactions                      ';                     :
