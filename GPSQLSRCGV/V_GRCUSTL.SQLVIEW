  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  T_GRCUSTL.*,                                                                  :
**CASE*WHEN*CLCUSTCODE**IS*NOT**NULL*THEN*TRIM(CUSRNM)****' '****TRIM(CUSRTN)***:BG18886
  CASE WHEN CLCUSTCODE IS NOT NULL THEN TRIM(CUSRNM) CONCAT ' ' CONCAT          :BG18886
  TRIM(CUSRTN)                                                                  :BG18886
  ELSE V_GRCUSTG.CGNAME                                                         :
  END AS CLDESC                                                                 :
  FROM T_GRCUSTL LEFT JOIN V_GRCUSTC V_GRCUSTC                                  :
  ON T_GRCUSTL.CLCUSTCODE=V_GRCUSTC.CUSGLOB                                     :
  LEFT JOIN V_GRCUSTG ON T_GRCUSTL.CLGRPID = V_GRCUSTG.CGID;                    :
