  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  T_GRINDSL.*,                                                                  :
  CASE WHEN T_GRINDSL.ILINDSCODE IS NOT NULL THEN IDDESC                        :
  ELSE V_GRINDSG.IGNAME                                                         :
  END AS ILDESC                                                                 :
  FROM T_GRINDSL                                                                :
   LEFT JOIN V_GRINDSI                                                          :
    ON T_GRINDSL.ILINDSCODE = V_GRINDSI.ILINDSCODE                              :
   LEFT JOIN V_GRINDSG                                                          :
    ON T_GRINDSL.ILGRPID=V_GRINDSG.IGID;                                        :
