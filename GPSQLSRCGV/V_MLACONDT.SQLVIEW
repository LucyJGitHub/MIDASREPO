  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (ACCNTOFCR,                                                                   :
   ZONE)                                                                        :
  AS                                                                            :
  SELECT                                                                        :
  DISTINCT(ACACOC) AS ACCNTOFCR, ACZONE AS ZONE                                 :
  FROM GPACOFXPD                                                                :
  INNER JOIN T_MLLIMIT ON LIMONOFCR=ACACOC OR LIAPROFCR=ACACOC;                 :
