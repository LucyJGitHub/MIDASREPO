  CREATE VIEW                                                                   :
  **********/**********                                                         :
**(ZONE,************************************************************************:BUG1910
***BRANCH,**********************************************************************:BUG1910
***RUNDATE)*********************************************************************:BUG1910
  AS                                                                            :
  SELECT                                                                        :
   A8ZONE AS ZONE,                                                              :
   A8BRCD AS BRANCH,                                                            :
***DATE(BJRDNB+719892)*AS*RUNDATE***********************************************:BUG1910
   DATE(BJRDNB+719892) AS RUNDATE,                                              :BUG1910
  CASE                                                                          :BUG1910
  WHEN CDPROPERTY='GlobalZone' AND CDVALUE=A8ZONE  THEN 'Y'                     :BUG1910
  ELSE 'N'                                                                      :BUG1910
  END AS GLOBAL                                                                 :BUG1910
  FROM GZSDBANKPD                                                               :
**INNER*JOIN*GZSDBRCHPD*ON*BJZONE=A8ZONE;***************************************:BUG1910
  INNER JOIN GZSDBRCHPD ON BJZONE=A8ZONE                                        :BUG1910
**LEFT*JOIN*T_MLGBLCD*ON*CDVALUE=A8ZONE;****************************************:BUG1910    MD058088
  LEFT JOIN T_MLGJW0  ON CDVALUE=A8ZONE;                                        :           MD058088
