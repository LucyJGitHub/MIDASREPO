  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
      BBBRCD AS CUBRCD,                                                         :
      BBCUST AS CUCUST,                                                         :
      CASE                                                                      :
******WHEN*CUSTX.CUGCUS*IS*NULL*THEN*(BBBRCD****'-'****BBCUST)******************:BG18886
      WHEN CUSTX.CUGCUS IS NULL THEN (BBBRCD CONCAT '-' CONCAT BBCUST)          :BG18886
      ELSE CUSTX.CUGCUS                                                         :
      END AS CUGCUS,                                                            :
      BRCH.A8ZONE AS CUZONE                                                     :
  FROM GZSDCUSTPD INNER JOIN V_MLBRCH BRCH ON BBBRCD=A8BRCD                     :
  LEFT OUTER JOIN GPCUSTXPD CUSTX                                               :
  ON BBBRCD=CUBRCD AND                                                          :
  BBCUST=CUSTX.CUCUST;                                                          :
