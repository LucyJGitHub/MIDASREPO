  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (ZONE,                                                                        :
   TYPE,                                                                        :
   SUBTYPE,                                                                     :
   REMARK)                                                                      :
  AS                                                                            :
  SELECT FDZONE AS ZONE, DTPE11 AS TYPE, DLST11 AS SUBTYPE, NARR11 AS REMARK    :
  FROM GZFDDTSTPD                                                               :
  WHERE EXISTS (                                                                :
   SELECT * FROM (                                                              :
    SELECT GPINSTXPD.*                                                          :
    FROM GPINSTXPD GPINSTXPD                                                    :
    INNER JOIN T_GRINSTL                                                        :
    ON INGINS=NLINSTCODE) T                                                     :
   WHERE T.INMOD='DL' AND T.INTRTP=DTPE11                                       :
  );                                                                            :
