  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (ACON,                                                                        :
   ACOC,                                                                        :BUG1679
   LIMITID,                                                                     :
   TYPE,                                                                        :
   INSTGRP,                                                                     :
   INSTGRPNM,                                                                   :
   ENTYTYPE,                                                                    :
   ENTYCODE,                                                                    :
   UTSRTYPE,                                                                    :
   UTSRCODE,                                                                    :
   UTSRNAME,                                                                    :
   AMT,                                                                         :
   EXPOSURE,                                                                    :
   EXCESS,                                                                      :
   TENOR,                                                                       :
   BRCH,                                                                        :
   CCY,                                                                         :
   NBDP,                                                                        :
   STATUS)                                                                      :
  AS                                                                            :
  SELECT                                                                        :
   AZACON AS ACON,                                                              :
   ACGACO AS ACOC,                                                              :BUG1679
   LILIMITID AS LIMITID,                                                        :
   LITYPE AS TYPE,                                                              :
   LIINSTGRP AS INSTGRP,                                                        :
   NGNAME AS INSTGRPNM,                                                         :
   LIENTYTYPE AS ENTYTYPE,                                                      :
   LIENTYCODE AS ENTYCODE,                                                      :
   LIUTSRTYPE AS UTSRTYPE,                                                      :
   LIUTSRCODE AS UTSRCODE,                                                      :
   UTSRNAME AS UTSRNAME,                                                        :
   LIAMT AS AMT,                                                                :
   LIEXPOSURE AS EXPOSURE,                                                      :
   LIAMT-LIAMT AS EXCESS,                                                       :
   LITENOR AS TENOR,                                                            :
   LIEXPBRCH AS BRCH,                                                           :
   LICCY AS CCY,                                                                :
   GCNBDP AS NBDP,                                                              :
   LISTATUS AS STATUS                                                           :
  FROM T_MLLIMIT                                                                :
  INNER JOIN GPCURRPD ON LICCY=GCCYCD                                           :
  INNER JOIN V_MLACCOFF ON LIMONOFCR=ACGACO                                     :
  INNER JOIN V_MLUTILSR ON LIUTSRTYPE=UTSRTYPE AND LIUTSRCODE=UTSRCODE          :
  LEFT  JOIN T_GRINSTG ON LIINSTGRP=NGID;                                       :
