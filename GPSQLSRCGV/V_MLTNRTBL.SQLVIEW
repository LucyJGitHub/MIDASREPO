             OR MSWSTAT='REJECTED'                               THEN 'N'       :BUG12833
      ELSE 'Y'                                                                  :
******END AS TTOUTSTANDING******************************************************:BUG1623
      END AS TTOUTSTAND                                                         :BUG1623
**FROM*T_MLTNRTBL*A*************************************************************:BUG1441
**JOIN*T_MSWIP*B****************************************************************:BUG1441
**ON*A.TTCODE*=*B.MSWTREF*******************************************************:BUG1441
  FROM T_MLTNRTBL                                                               :BUG1441
  INNER JOIN V_WIPREC ON TTCODE = MSWTREF                                       :BUG1441
  WHERE TTSTATUS <> 'D';                                                        :
