  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
      TTCODE,                                                                   :
      TTTYPE,                                                                   :
      TTREMARK,                                                                 :
      TTTENORS,                                                                 :
      TTSTATUS,                                                                 :
******CASE WHEN MSWSTAT='AUTHORISED' OR MSWSTAT='NOT_AUTHORISED' THEN 'N'*******:BUG12833
