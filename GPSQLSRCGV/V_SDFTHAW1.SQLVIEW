  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (HACUST ,
  HABRCA ,
  HACUTP ,
  HAHVIN ,
  HAHVAM ,
  HAUTIN ,
  HAUTNC ,
  HATIN2 ,
  HATNC2 ,
  HATIN3 ,
  HATNC3 ,
  HATIN4 ,
  HATNC4 ,
  HATIN5 ,
  HATNC5 ,
  HATIND ,
  HAGCUS,
  HAZONE )
  AS
  SELECT * FROM V_SDFTHAW0 A
  WHERE A.HAGCUS IN (SELECT B.HAGCUS
  FROM V_SDFTHAW0 B WHERE B.HAGCUS != ''
  GROUP BY B.HAGCUS HAVING COUNT(B.HAGCUS)> 1) OR A.HAUTIN IN
  (SELECT C.HAUTIN FROM V_SDFTHAW0 C WHERE
  C.HAUTIN != '' AND A.HAZONE = C.HAZONE
  GROUP BY C.HAUTIN HAVING COUNT(C.HAUTIN)> 1)
  OR A.HATIND = 'M'
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas GZ FATCA High Value A/C Amounts             ';                     :
