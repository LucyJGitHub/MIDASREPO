/*******************************************************************************/
  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (WIPID,                                                                       :
   MSWCAT,                                                                      :
   TREF)                                                                        :
  AS                                                                            :
  SELECT MAX(MSWID) AS WIPID, MSWCAT, MSWTREF AS TREF                           :
  FROM T_MSWIP                                                                  :
  WHERE MSWTREF IN (SELECT DISTINCT(MSWTREF) FROM T_MSWIP)                      :
    AND CURDATE() = (CASE MSWSTAT                                               :
     WHEN 'AUTHORISED' THEN DATE(MSWAUTHTS)                                     :
     WHEN 'APPROVED' THEN DATE(MSWAPPRTS)                                       :
     WHEN 'TO_AUTHORISE' THEN DATE(MSWINPTS)                                    :
     WHEN 'TO_APPROV' THEN DATE(MSWINPTS)                                       :
     WHEN 'NOT_AUTHORISED' THEN DATE(MSWAUTHTS)                                 :
     END)                                                                       :
    AND MSWSTAT <> 'INCOMPLETE'                                                 :
  GROUP BY MSWCAT, MSWTREF;                                                     :
                                                                                :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas GP All the WIP records actioned today       ';                     :
