/************************************************************************************/
  CREATE VIEW                                                                        :
  **********/**********                                                              :
  AS                                                                                 :
  SELECT                                                                             :
****RECI,**ACST,*BRCA,**DIGITS(CNUM)*AS*PADCNUM,*************************************:        CSD027
    RECI,  ACST, BRCA,         CNUM  AS PADCNUM,                                     :        CSD027
    CNUM, CCY,  DIGITS(ACOD) AS PADACOD, ACOD,                                       :
    DIGITS(ACSQ) AS PADACSQ,  ACSQ,  DIGITS(ACNO) AS PADACNO,  ACNO,                 :
    CASE WHEN A7NONB IS NULL THEN '00' ELSE A7NONB END AS NONB,                      :
    ATYP, ANAM, PRFC, RETB,                                                          :
****CASE*WHEN*LAND(X'20',RETB)*<>*X'00'*THEN*'N'*ELSE*'Y'*END AS BIT2,               :       BUG5331
****CASE*WHEN*LAND(X'10',RETB)*<>*X'00'*THEN*'N'*ELSE*'Y'*END AS BIT3,               :       BUG5331
****CASE*WHEN*LAND(X'02',RETB)*<>*X'00'*THEN*'N'*ELSE*'Y'*END AS BIT6,               :       BUG5331
****CASE*WHEN*LAND(X'01',RETB)*<>*X'00'*THEN*'N'*ELSE*'Y'*END AS BIT7,               :       BUG5331
    CASE WHEN LAND(X'20',RETB) <> X'00' THEN 'Y' ELSE 'N' END AS BIT2,               :       BUG5331
    CASE WHEN LAND(X'10',RETB) <> X'00' THEN 'Y' ELSE 'N' END AS BIT3,               :       BUG5331
    CASE WHEN LAND(X'02',RETB) <> X'00' THEN 'Y' ELSE 'N' END AS BIT6,               :       BUG5331
    CASE WHEN LAND(X'01',RETB) <> X'00' THEN 'Y' ELSE 'N' END AS BIT7,               :       BUG5331
****DIGITS(CNUM)**CCY**DIGITS(ACOD)**DIGITS(ACSQ)*AS*SINGACCN,***********************:        CSD027
********** CNUM **CCY**DIGITS(ACOD)**DIGITS(ACSQ) AS SINGACCN,                       :CSD027 BG18886
           CNUM CONCAT CCY CONCAT DIGITS(ACOD) CONCAT DIGITS(ACSQ) AS SINGACCN,      :CSD027 BG18886
****BRCA**DIGITS(CNUM)**CCY**DIGITS(ACOD)**DIGITS(ACSQ)*AS*MULTACCN******************:       BUG3270
****BRCA**DIGITS(CNUM)**CCY**DIGITS(ACOD)**DIGITS(ACSQ)*AS*MULTACCN,*****************:BUG3270 CSD027
****BRCA*********CNUM **CCY**DIGITS(ACOD)**DIGITS(ACSQ) AS MULTACCN,                 :CSD027 BG18886
    BRCA CONCAT CNUM CONCAT CCY CONCAT DIGITS(ACOD) CONCAT DIGITS(ACSQ)              :CSD027 BG18886
    AS MULTACCN,                                                                     :       BG18886
****CLBL,*A8ZONE*AS*ZONE*************************************************************:BUG3270 CSF011
    CLBL, A8ZONE AS ZONE,                                                            :        CSF011
    O.BBCSSN,O.BBCRNM,O.BBCRTN                                                       :        CSF011
                                                                                     :
   FROM GZACCNTAB                                                                    :
   LEFT JOIN GZSDNOSTPD                                                              :
****ON*BRCA*=*A7BRCD**AND*CNUM*=*INT(A7CUST)*****************************************:        CSD027
****ON*BRCA*=*A7BRCD**AND*CNUM*=*****A7CUST******************************************: CSD027 238701
****AND*CCY*=*A7CYCD*AND*ACOD*=INT(A7ACCD)*******************************************:        238701
****ON*BRCA*=*A7BRCD**AND*DIGITS(CNUM)*=*A7CUST**************************************:        238701
    ON BRCA = A7BRCD  AND CNUM = A7CUST                                             :238701 BUG12234
    AND CCY = A7CYCD AND DIGITS(ACOD) = A7ACCD                                       :        238701
    AND ACSQ = A7ACSN                                                                :
   LEFT JOIN GZSDBRCHPD                                                              :       BUG3270
    ON BRCA = A8BRCD                                                                 :       BUG3270
    LEFT JOIN                                                                        :      MD020508
    GPGLCUSL B                                                                       :      MD020508
     ON CNUM = CGCUST AND A8ZONE = CGZONE                                            :      MD020508
    LEFT JOIN                                                                        :        CSF011
    GZSDCUSTPD O                                                                     :        CSF011
*****ON*CNUM*=*O.BBCUST*AND*BRCA*=*O.BBBRCD*****************************************:CSF011 MD020508
     ON CNUM = O.BBCUST AND B.CGBRCD = O.BBBRCD                                     :       MD020508
/************************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas GZ GL Account details - GZACCNTAB           ';                     :
