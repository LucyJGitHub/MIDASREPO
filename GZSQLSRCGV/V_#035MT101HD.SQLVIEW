/************************************************************************************/
  CREATE VIEW                                                                        :
  **********/**********                                                              :
  AS                                                                                 :
   SELECT                                                                            :
    RFTID, STID, SNDREF, PYTP, PYST, BRCA, ORBR, BOKC, PRFC, RFTDST,                 :
    CUSTRF, HINPTY, HOCUS1, HOCUS2, HOCUS3, HOCUS4, HOCUS5, CUSTTP,                  :
    ASITTP, HACSV1, HACSV2, SINST, AUTHTX, HANDCY,                                   :
    HANDAC, SWPRIO, INUSER, INTIME, UPDUSR, UPDTIM, AUP1,                            :
    AUP2, RDUAL, AUIN, BAUTH, BATUSR, ADVCRT, TOTDBT, GEN101, AKEYHC,                :
    AKEYAL, CSEQNO, RHMSGR, FXSRST, SWSTCC, SWPRCC, SWSTDC, SWPRIC,                  :
    OMICC1, OMICC2, OMICC3, OMICC4, OMICC5, OMIC1, OMIC2, OMIC3, OMIC4,              :
    OMIC5, VOMIC1, VOMIC2, VOMIC3, VOMIC4, VOMIC5, VSSCH, VSPCH, VATRAT,             :
    VATAMO, A8ZONE AS CUSTZONE,                                                      :
    CASE WHEN EXDATE=0 THEN NULL ELSE DATE(EXDATE+719892) END AS FEXDATE,            :
    CASE WHEN DBTVDT=0 THEN NULL ELSE DATE(DBTVDT+719892) END AS FDBTVDT,            :
    CASE WHEN INDATE=0 THEN NULL ELSE DATE(INDATE+719892) END AS FINDATE,            :
    CASE WHEN UPDDTE=0 THEN NULL ELSE DATE(UPDDTE+719892) END AS FUPDDTE,            :
****DEC(HANDCG*C1.SCALING,31,4) AS "SHANDCG",****************************************:/*BUG5605*/
****DEC(HANDCG*C1.SCALING*C1.RATE,31,4) AS "BSHANDCG"********************************:/*BUG5605*/
    HANDCG AS SHANDCG                                                                :/*BUG5605*/
   FROM GZFT101HPD                                                                   :
***LEFT JOIN GZSDBRCHPD ON BRCA = A8BRCD*********************************************:/*BUG5605*/
   LEFT JOIN GZSDBRCHPD ON BRCA = A8BRCD;                                            :/*BUG5605*/
***LEFT JOIN V_GLOBRATE C1 ON C1.CCY=HANDCY;*****************************************:/*BUG5605*/
                                                                                     :
