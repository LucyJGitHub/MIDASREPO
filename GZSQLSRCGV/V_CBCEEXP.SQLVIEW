  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
   SELECT EQ.*,                                                                 :
   (CNEXPOSURE * SPOTRATE) AS BSCCYEXP,                                         :
   (CNOFFSET * SPOTRATE) AS BSCCYOFF                                            :
   FROM T_MLEQCE EQ                                                             :
***INNER*JOIN*IGGVLIB/V_MLCCYRT*CCYRATE*****************************************:             CPK027
   INNER JOIN V_MLCCYRT CCYRATE                                                 :             CPK027
   ON EQ.CNCCY = CCYRATE.CCYCODE                                                :
   AND EQ.CNZONE = CCYRATE.ZONE ;                                               :
