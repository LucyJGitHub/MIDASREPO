  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
   SELECT EQ.*,                                                                 :
   (INEXPOSURE * SPOTRATE) AS BSCCYEXP,                                         :
   (INOFFSET * SPOTRATE) AS BSCCYOFF                                            :
   FROM T_MLEQIE EQ                                                             :
   INNER JOIN V_MLCCYRT CCYRATE                                                 :
   ON EQ.INCCY = CCYRATE.CCYCODE AND EQ.INZONE = CCYRATE.ZONE;                  :
                                                                                :
   LABEL ON TABLE V_CBIEEXP IS 'CONSUMER BANKING INDUSTRY EXPOSURES'            :
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Consumer Banking Industry Exposures               ';                     :
