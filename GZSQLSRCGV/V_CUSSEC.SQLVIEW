  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  DISTINCT A8ZONE AS ZONE, BBBRCD, BBCUST, USMUSRP                              :
  ,CSSECID AS CUSSECID
  FROM  GZSDCUSTPD                                                              :
  LEFT JOIN T_CUSSEC ON BBCUST = CSCUST AND CSBRCA = BBBRCD                     :
  LEFT JOIN T_USRSEC ON USSECID = CSSECID                                       :
  LEFT JOIN T_USRGRPMD ON USGRPID = USMHID                                      :
  LEFT JOIN GZSDBRCHPD ON BBBRCD = A8BRCD                                       :
