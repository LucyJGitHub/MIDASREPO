  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
**RECI, DLNO, CNUM, CCY , MAAM, SIGN, DTYP, INIRS, ZZ158, BRCA, UDTM, RRNT,*****:           MD020032
  RECI, CONCAT(SUBSTR('000000', 1, 6 - LENGTH(TRIM(DLNO))), DLNO) AS DLNO,      :           MD020032
  CNUM, CCY, MAAM, SIGN, DTYP, INIRS, ZZ158, BRCA, UDTM, RRNT,                  :           MD020032
  TNLU, USIT, AACF, FSGN , FLLCD, FLTYLC, FLUSGN, FLTRNN, FLFRNT,               :
  FLAFRT, FLREPA, FLTMST, FLUSER                                                :
*FROM*DLSTRANFPD****************************************************************:          AR1096788
 FROM GZSTRANF STRANF WHERE RECI = 'F' AND FLTRNN <> ' ';                       :          AR1096788
                                                                                :
