                                                                                :
  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (TRLOGID ,                                                                    :
   TRZONE ,                                                                     :
   TRAPI ,                                                                      :
   TRDLNO ,                                                                     :
   TRHDRNO ,                                                                    :
   TRACT ,                                                                      :
   TRWIPSTAT ,                                                                  :
   TRPRMTR ,                                                                    :
   TRDATE ,                                                                     :
   TRSYS ,                                                                      :
   TRCMPDACT ,                                                                  :
   TRTSTAMP ,                                                                   :
   TRCMPLTD ,                                                                   :
   CURRTXNACT ,                                                                 :
   TRWIPID )                                                                    :
   AS                                                                           :
   SELECT A.LOGID AS TRLOGID,TRZONE,TRAPI,TRDLNO,TDHDRNO AS                     :
   TRHDRNO,TRACT,TRWIPSTAT,TRPRMTR,TRDATE,TRSYS,TRCMPDACT,                      :
   TSTAMP AS TRTSTAMP,CMPLTD AS TRCMPLTD, CURRTXNACT,TRWIPID FROM               :
   T_GPTRANS A LEFT JOIN T_OMETRANS B ON A.LOGID=B.LOGID ;                      :
                                                                                :
  LABEL ON TABLE                                                                :
  **********/**********                                                         :
   IS 'Log view (T_GPTRANS) with playback completion stat' ;                    :
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas GZ Transaction log with playback completion ';                     :
