  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (                                                                             :
  RECI ,                                                                        :
  CNUM ,                                                                        :
  FACT ,                                                                        :
  FCNO ,                                                                        :
  RCTP ,                                                                        :
  BRCA ,                                                                        :
  A8ZONE ,                                                                      :
  PADCNUM ,                                                                     :
  PADFACT ,                                                                     :
**PADFCNO )*********************************************************************: /*CLE106*/
  PADFCNO,                                                                      : /*CLE106*/
  PCRF )                                                                        : /*CLE106*/
  AS                                                                            :
  SELECT                                                                        :
  RECI , CNUM , FACT , FCNO , RCTP ,                                            :
**BRCA*,*A8ZONE,*DIGITS(CNUM)*AS*PADCNUM,***************************************:             CSD027
  BRCA , A8ZONE,        CNUM  AS PADCNUM,                                       :             CSD027
**DIGITS(FACT)*AS*PADFACT,*DIGITS(FCNO)*AS*PADFCNO******************************: /*CLE106*/
  DIGITS(FACT) AS PADFACT, DIGITS(FCNO) AS PADFCNO,                             : /*CLE106*/
  PCRF                                                                          : /*CLE106*/
  FROM GZFCLTYFM GZFCLTYFM                                                      :
  LEFT OUTER JOIN GZSDBRCHPD ON BRCA = A8BRCD ;                                 :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( RECI IS 'Rec                 Id' ,                                          :
  CNUM IS 'Customer            Number' ,                                        :
  FACT IS 'Facil               Type' ,                                          :
  FCNO IS 'Fac                 No' ,                                            :
  RCTP IS 'Rec                 Typ' ,                                           :
  BRCA IS 'Brch                Code' ,                                          :
  A8ZONE IS 'Zone' ) ;                                                          :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( RECI TEXT IS 'Record Id' ,                                                  :
  CNUM TEXT IS 'Customer number' ,                                              :
  FACT TEXT IS 'Facility type' ,                                                :
  FCNO TEXT IS 'Facility number' ,                                              :
  RCTP TEXT IS 'Record type' ,                                                  :
  BRCA TEXT IS 'Branch Code - Alpha' ,                                          :
  A8ZONE TEXT IS 'Zone' ) ;                                                     :
