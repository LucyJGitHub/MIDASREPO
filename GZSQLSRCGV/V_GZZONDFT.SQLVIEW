  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
   SELECT V_GZMACZON.USRP, V_GZMACZON.ZONE, V_USERMENU.TZONE AS                 :
   DEFLTZONE FROM V_GZMACZON                                                    :
   LEFT JOIN                                                                    :
   V_USERMENU ON                                                                :
   V_GZMACZON.USRP=V_USERMENU.MUSERNAME                                         :
