  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
   GZSDALTNPD.BCCUST, GZSDALTNPD.BCADCD, GZSDALTNPD.BCCNCD,                     :
   T_GZCUSTEX.DDLCCD                                                            :
  FROM                                                                          :
   GZSDALTNPD, T_GZCUSTEX WHERE T_GZCUSTEX.DDCUSN =                             :
   GZSDALTNPD.BCCUST AND T_GZCUSTEX.DDCSTY = 'U';                               :
                                                                                :
  LABEL ON COLUMN V_SDALUNI (BCCUST IS 'CUSTOMER NUMBER' ,                      :
   BCADCD IS 'ADDRESS TYPE' , BCCNCD IS 'COUNTRY CODE', DDLCCD IS 'LOCATION')   :
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas GZ Alternative Names View (Universal)       ';                     :
                                                                                :
