/*******************************************************************************/
  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS
  SELECT A.*,B.ATDCNA,C.BJRDNB,C.BJZONE,
  CASE
   WHEN C.BJRDNB > A.DMEXDT AND A.DMEXDT > 0 AND DMSTCD NOT IN ('C')
  THEN 'E'
   WHEN C.BJRDNB > A.DMREQB AND A.DMREQB > 0 AND DMSTCD NOT IN
  ('C','A') THEN 'O'
   ELSE ''
  END AS DMSYST
  FROM GZSDDCMTPD A
  JOIN GZSDDOCMPD B ON B.ATDCCD=A.DMCODE AND A.DMZONE=B.ATZONE
  JOIN GZSDBANKPD C ON C.BJZONE = A.DMZONE;
 
