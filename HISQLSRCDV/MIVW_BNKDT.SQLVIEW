   BJHOCY,                                                                      :
   BJSBRC,                                                                      :
   BJEFMT,                                                                      :
   BJDNWD,                                                                      :
   BJURPT,                                                                      :
   BJCUST,                                                                      :
   BJCNCD,                                                                      :
   BJMODT,                                                                      :
   BJCYCD,                                                                      :
   CASE WHEN BJRDNB = 0 THEN NULL ELSE DATE(BJRDNB+719892) END AS MIBJRDNBS,    :
   BJEYD,                                                                       :
   BJSLCD,                                                                      :
   CASE WHEN BJLCD = 0 THEN NULL ELSE DATE(BJLCD+719892) END AS MIBJLCDS,       :
   CASE WHEN BJEYD = 0 THEN NULL ELSE DATE(BJEYD+719892) END AS MIBJEYDS,       :
   1                                                                            :
