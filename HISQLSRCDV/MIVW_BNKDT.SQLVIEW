   BJPEYD,                                                                      :
   BJMDEL,                                                                      :
   BJRDNB,                                                                      :
   BJPCFU,                                                                      :
   BJDFIN,                                                                      :
   BJLCD,                                                                       :
   BJSUC,                                                                       :
   BJPCFQ,                                                                      :
   CASE WHEN BJDNWD = 0 THEN NULL ELSE DATE(BJDNWD+719892) END AS MIBJDNWDS,    :
   BJTYLC,                                                                      :
   BJBVPD,                                                                      :
   BJMRDT,                                                                      :
   BJLCCY,                                                                      :
