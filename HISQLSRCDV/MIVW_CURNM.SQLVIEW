   CREATE VIEW                                                                  :
   **********/**********                                                        :
   ( MICBREF,                                                                   :
     MICODEPK,                                                                  :
     MICDES,                                                                    :
     VERSIONNUM)                                                                :
  AS SELECT                                                                     :
     'CURRENCYNAME' AS MICBREF,                                                 :
     A6CYCD AS MICODEPK,                                                        :
     A6CYNM AS MICDES,                                                          :
     1 AS VERSIONNUM                                                            :
  FROM SDCURRPD                                                                 :
  RCDFMT MIVW_CURNM ;                                                           :
                                                                                :
  LABEL ON COLUMN **********/**********                                         :
  (  MICBREF IS 'Reference of the generic code',                                :
     MICODEPK IS 'Currency Code' ,                                              :
     MICDES IS 'Currency Name' ,                                                :
     VERSIONNUM IS 'Version Number');                                           :
                                                                                :
  LABEL ON COLUMN **********/**********                                         :
  (  MICBREF TEXT IS 'Reference of the generic code',                           :
     MICODEPK TEXT IS 'Currency Code' ,                                         :
     MICDES TEXT IS 'Currency Name' ,                                           :
     VERSIONNUM TEXT IS 'Version Number');                                      :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas HIL Currency name view                      ';                     :
                                                                                :
