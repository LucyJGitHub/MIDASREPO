  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT DISTINCT A.MIFTCHIDPK, A.MIFTDESC, A.MIFTSWFT, VERSIONNUM              :
      FROM MITB_FTCHG A, SCSARDPD B                                             :
      WHERE A.MIFTSWFT = B.SARN OR A.MIFTSWFT = 'N';                            :
