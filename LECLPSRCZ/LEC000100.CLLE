             DCL        VAR(&PFNAME) TYPE(*CHAR) LEN(8)                                   /*CCB023*/
 
/* Global monitor message */
 
             MONMSG     MSGID(CPF0000 MCH0000 RPG0000) EXEC(GOTO +
                          CMDLBL(ABNOR))
 
             SNDPGMMSG  MSG('LEC000100 - CL Reconciliation +
                         Reports') TOMSGQ(MRUNQ)
 
             CHGJOB     SWS(XXXXXX00)
 
