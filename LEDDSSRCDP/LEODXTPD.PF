     A          R LEODXTPDF                 TEXT('(c) Finastra International +
     A                                      Limited +
     A                                      2012')
     A            BRCA           3A         TEXT('Branch Code')
     A                                      COLHDG('Branch' 'Code')
     A            PDCLAS         1S 0       TEXT('Basel II/Reporting +
     A                                            Past Due Class')
     A                                      COLHDG('Basel II /' +
     A                                             'Reporting'  +
     A                                             'P/D Class'  )
     A            CNUM           6A         TEXT('Customer Number')
     A                                      COLHDG('Customer' 'Number')
     A            CCY            3A         TEXT('Currency Code')
     A                                      COLHDG('Currency' 'Code')
     A            NBDP           1P 0       TEXT('No. of Decimal +
     A                                            Places')
     A                                      COLHDG('No. of' 'Decimal' +
     A                                             'Places')
     A            ACOD          10S 0       TEXT('Account Code')
     A                                      COLHDG('Account Code')
     A            ACSQ           2S 0       TEXT('Account Sequence')
     A                                      COLHDG('Account' 'Seq.')
     A            ACNO          10S 0       TEXT('Retail Account No.')
     A                                      COLHDG('Retail A/c No.')
     A            ANAM          20A         TEXT('Account Name')
     A                                      COLHDG('Account Name')
     A            CLBL          15P 0       TEXT('Cleared Balance')
     A                                      COLHDG('Cleared Balance')
     A            LDBL          15P 0       TEXT('Ledger Balance')
     A                                      COLHDG('Ledger Balance')
     A            ODLN          11P 0       TEXT('Overdraft Limit')
     A                                      COLHDG('Overdraft Limit')
     A            DYPD           5  0       TEXT('Days in Past Due')
     A                                      COLHDG('Days in'  +
     A                                             'Past Due' )
     A            LPYD           5  0       TEXT('Last Payment Date')
     A                                      COLHDG('Date of'  +
     A                                             'Last   '  +
     A                                             'Payment'  )
     A          K BRCA
     A          K PDCLAS
     A          K CNUM
     A          K CCY
     A          K ACOD
     A          K ACSQ
