  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (LNRF ,                                                                       :
   PADLNRF ,                                                                    :
   RELI ,                                                                       :
   CNUM ,                                                                       :
   PADCNUM ,                                                                    :
   LTYP ,                                                                       :
   SUTP ,                                                                       :
   CLAS ,                                                                       :             CLE042
   CCY ,                                                                        :
   CPAM ,                                                                       :
   MDAT ,                                                                       :
   RECI ,                                                                       :
   LSTS ,                                                                       :
   AUTO ,                                                                       :
   FCUS ,                                                                       :
   PADFCUS ,                                                                    :
   FTYP ,                                                                       :
   PADFTYP ,                                                                    :
   FSEQ ,                                                                       :
   PADFSEQ ,                                                                    :
   BRCA ,                                                                       :
   VDAT ,                                                                       :
   PTYP )                                                                       :
   AS                                                                           :
***SELECT**LNRF,*DIGITS(LNRF)*AS*PADLNRF,****CASE*WHEN*LAND(X'80',RELI)*<>*X'00':             CLE148
   SELECT  LNRF,        LNRF  AS PADLNRF,    CASE WHEN LAND(X'80',RELI) <> X'00':             CLE148
***THEN*'80'***ELSE*'00'*END*AS*RELI,***CNUM,DIGITS(CNUM)*AS*PADCNUM,**LTYP,****:             CSD027
***SUTP,**CCY,**CPAM,**MDAT,**RECI,****LSTS,**AUTO,*FCUS,*DIGITS(FCUS)*AS*******:             CLE042
***SUTP,*CLAS,**CCY,**CPAM,**MDAT,**RECI,**LSTS,**AUTO,*FCUS,*DIGITS(FCUS)*AS***:      CLE042 CSD027
   THEN '80'   ELSE '00' END AS RELI,   CNUM,       CNUM  AS PADCNUM,  LTYP,    :             CSD027
   SUTP, CLAS,  CCY,  CPAM,  MDAT,  RECI,  LSTS,  AUTO, FCUS,        FCUS  AS   :             CSD027
   PADFCUS,  FTYP, DIGITS(FTYP) AS PADFTYP,   FSEQ, DIGITS(FSEQ) AS PADFSEQ,    :
   BRCA,  VDAT,PTYP FROM CLOANCL ;                                              :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
 ( LNRF IS 'Loan                Number' ,                                       :
  CNUM IS 'Customer            Number' ,                                        :
  LTYP IS 'Loan                Type' ,                                          :
  SUTP IS 'Loan                Sub-                Type' ,                      :
  CLAS IS 'Loan               Class' ,                                          :             CLE042
  CCY IS 'Curr                Code' ,                                           :
  CPAM IS 'Current             Principal           Amount' ,                    :
  MDAT IS 'Maturty             Date' ,                                          :
  RECI IS 'Rec                 Id' ,                                            :
  LSTS IS 'Loan                Sts' ,                                           :
  AUTO IS 'Aut                 Set                 Ind' ,                       :
  FCUS IS 'Facility            Customer' ,                                      :
  FTYP IS 'Fclty               Type' ,                                          :
  FSEQ IS 'Fac.                Seq.                Numb' ,                      :
  BRCA IS 'Brch                Code' ,                                          :
  VDAT IS 'Value               Date' ,                                          :
  PTYP IS 'Loan                Proc                Type' ) ;                    :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
 ( LNRF TEXT IS 'Loan number' ,                                                 :
  CNUM TEXT IS 'Customer number' ,                                              :
  LTYP TEXT IS 'Loan type' ,                                                    :
  SUTP TEXT IS 'Loan sub-type' ,                                                :
  CLAS TEXT IS 'Loan class' ,                                                   :             CLE042
  CCY TEXT IS 'Currency code' ,                                                 :
  CPAM TEXT IS 'Current principal amount' ,                                     :
  MDAT TEXT IS 'Maturity date' ,                                                :
  RECI TEXT IS 'Record Id' ,                                                    :
  LSTS TEXT IS 'Loan Status Indicator' ,                                        :
  AUTO TEXT IS 'Auto settlement indicator' ,                                    :
  FCUS TEXT IS 'Facility customer' ,                                            :
  FTYP TEXT IS 'Facility type' ,                                                :
  FSEQ TEXT IS 'Facility sequence number' ,                                     :
  BRCA TEXT IS 'Branch Code - Alpha' ,                                          :
  VDAT TEXT IS 'Value date' ,                                                   :
  PTYP TEXT IS 'Loan processing type' ) ;                                       :
