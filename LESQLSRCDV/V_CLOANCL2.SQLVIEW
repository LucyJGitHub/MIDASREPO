  CPAM IS 'CURRENT             PRINCIPAL           AMOUNT' ,                    :
  MDAT IS 'MATURTY             DATE' ,                                          :
  RECI IS 'REC                 ID' ,                                            :
  LSTS IS 'LOAN                STS' ,                                           :
  BRCA IS 'BRCH                CODE' ,                                          :
  VDAT IS 'VALUE               DATE' ,                                          :
  A8CMCD IS 'COMPANY             CODE' ) ;                                      :
