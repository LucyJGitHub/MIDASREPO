  CPAM TEXT IS 'CURRENT PRINCIPAL AMOUNT' ,                                     :
  MDAT TEXT IS 'MATURITY DATE' ,                                                :
  RECI TEXT IS 'RECORD ID' ,                                                    :
  LSTS TEXT IS 'LOAN STATUS INDICATOR' ,                                        :
