  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  LNRF AS DDLNRF,                                                               :
  RIDT AS DDRIDT,                                                               :
  RCAT AS DDRCAT,                                                               :
  BIDT AS DDBIDT,                                                               :
  BCAT AS DDBCAT                                                                :
