  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (                                                                             :
  PADCNUM,                                                                      :
  BBCSSN ,                                                                      :
  PRTRDSC,                                                                      :
  PRTR   ,                                                                      :
  PADFACT,                                                                      :
  PADFCNO,                                                                      :
  FCCY   ,                                                                      :
  SHPC   ,                                                                      :
  FSPA   ,
  BRCA   ,                                                                      :
  JDTE   ,                                                                      :
  COAG   ,                                                                      :
  FCAG   ,                                                                      :
  PHAG   ,                                                                      :
  SCAG   ,                                                                      :
  PADPMFC,                                                                      :
  PADPMFT,                                                                      :
  PADPMFN,                                                                      :
  PPRF)                                                                         :
  AS                                                                            :
  (SELECT                                                                       :
**DIGITS(D.CNUM)*AS*PADCNUM,****************************************************:           BUG16206
  D.CNUM AS PADCNUM,                                                            :           BUG16206
  BBCSSN,                                                                       :
  CASE A.PRTR                                                                   :
    WHEN 'I' THEN 'Internal'                                                    :
    WHEN 'P' THEN 'Funding'                                                     :
    WHEN 'R' THEN 'Risk'                                                        :
    WHEN 'S' THEN 'Sub-Participant'                                             :
    WHEN 'A' THEN 'Agent'                                                       :
    WHEN ''  THEN 'Non-Agent'                                                   :
  END AS PRTRDSC,                                                               :
  A.PRTR AS PRTR,                                                               :
  DIGITS(A.FACT) AS PADFACT,                                                    :
  DIGITS(A.FCNO) AS PADFCNO,                                                    :
  A.FCCY AS FCCY,                                                               :
  A.SHPC/1000000000000 AS SHPC,                                                 :
  D.FSPA,                                                                       :
  A.BRCA,                                                                       :
  A.JDTE AS JDTE,                                                               :
  A.COAG AS COAG,                                                               :
  A.FCAG AS FCAG,                                                               :
  A.PHAG AS PHAG,                                                               :
  A.SCAG AS SCAG,                                                               :
**DIGITS(A.PMFC)*AS*PADFMFC,****************************************************:           BUG16206
  A.PMFC AS PADFMFC,                                                            :           BUG16206
  DIGITS(A.PMFT) AS PADPMFT,                                                    :
  DIGITS(A.PMFN) AS PADPMFN,                                                    :
  CASE WHEN D.PPRF IS NULL THEN '' ELSE D.PPRF END AS PPRF                      :
  FROM                                                                          :
  LEFEALPD D, LEFEED E, SDCUSTPD,                                               :
  FCLTYFM A                                                                     :
  WHERE A.CNUM = D.CNUM                                                         :
  AND A.FACT = D.FACT                                                           :
  AND A.FCNO = D.FCNO                                                           :
  AND E.PCRF = D.PPRF                                                           :
**AND*BBCUST*=*DIGITS(D.CNUM)***************************************************:           BUG16206
  AND BBCUST = D.CNUM                                                           :           BUG16206
  );                                                                            :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  (                                                                             :
  PADCNUM IS 'Customer number'            ,                                     :
  BBCSSN  IS 'Customer shortname'         ,                                     :
  PRTRDSC IS 'Participant type description',                                    :
  PRTR    IS 'Participant type'           ,                                     :
  PADFACT IS 'Facility type'              ,                                     :
  PADFCNO IS 'Facility number'            ,                                     :
  FCCY    IS 'Facility currency'          ,                                     :
  SHPC    IS 'Pro-Rata Share Percentage'  ,                                     :
  FSPA    IS 'Percentage Allocation'      ,                                     :
  BRCA    IS 'Branch Code - Alpha'        ,                                     :
  JDTE    IS 'Joining Date'               ,                                     :
  COAG    IS 'Co-Agent'                   ,                                     :
  FCAG    IS 'Facility Agent'             ,                                     :
  PHAG    IS 'Paying / Handling Agent'    ,                                     :
  SCAG    IS 'Security Agent'             ,                                     :
  PADPMFC IS 'Primary Facility Customer number',                                :
  PADPMFT IS 'Primary Facility Type'      ,                                     :
  PADPMFN IS 'Primary Facility Number'    ,                                     :
  PPRF    IS 'Parent UTN');                                                     :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  (                                                                             :
  PADCNUM IS 'Customer number'            ,                                     :
  BBCSSN  IS 'Customer shortname'         ,                                     :
  PRTRDSC IS 'Participant type description',                                    :
  PRTR    IS 'Participant type'           ,                                     :
  PADFACT IS 'Facility type'              ,                                     :
  PADFCNO IS 'Facility number'            ,                                     :
  FCCY    IS 'Facility currency'          ,                                     :
  SHPC    IS 'Pro-Rata Share Percentage'  ,                                     :
  FSPA    IS 'Percentage Allocation'      ,                                     :
  BRCA    IS 'Branch Code - Alpha'        ,                                     :
  JDTE    IS 'Joining Date'               ,                                     :
  COAG    IS 'Co-Agent'                   ,                                     :
  FCAG    IS 'Facility Agent'             ,                                     :
  PHAG    IS 'Paying / Handling Agent'    ,                                     :
  SCAG    IS 'Security Agent'             ,                                     :
  PADPMFC IS 'Primary Facility Customer number',                                :
  PADPMFT IS 'Primary Facility Type'      ,                                     :
  PADPMFN IS 'Primary Facility Number'    ,                                     :
  PPRF    IS 'Parent UTN');                                                     :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas LE Non Pro-Rata                             ';                     :
