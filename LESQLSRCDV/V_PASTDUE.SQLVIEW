  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (                                                                             :
  CNUM,                                                                         :
  TYPE,                                                                         :
  SEQ,                                                                          :
  DUEDATE)                                                                      :
  AS                                                                            :
  (SELECT                                                                       :
  FECNUM AS CNUM,                                                               :
**CASE*WHEN*FELOAN=0*THEN*SUBSTR(DIGITS(L.FEFACL),1,3)*ELSE*C.FTYP*END*AS*TYPE,*:             CLE148
**CASE*WHEN*FELOAN*=*0*THEN*SUBSTR(DIGITS(L.FEFACL),4,5)*ELSE*C.FSEQ*END*AS SEQ,:             CLE148
  CASE WHEN FELOAN='' THEN SUBSTR(DIGITS(L.FEFACL),1,3) ELSE C.FTYP END AS TYPE,:             CLE148
  CASE WHEN FELOAN ='' THEN SUBSTR(DIGITS(L.FEFACL),4,5) ELSE C.FSEQ END AS SEQ,:             CLE148
  FEDDAT AS DUEDATE                                                             :
  FROM LEFEED L                                                                 :
  LEFT JOIN CLOANCL C ON L.FELOAN = C.LNRF                                      :
  WHERE FEDDAT > 0 UNION                                                        :
  ALL SELECT FCUS, FTYP, FSEQ, VDAT DUEDATE                                     :
  FROM LOAMSDK                                                                  :
  WHERE AMTP = 'PD') ;                                                          :
