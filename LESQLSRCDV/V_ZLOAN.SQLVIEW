  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
    L.*,                                                                        :
****DIGITS(L.LNRF)*as*PADLNRF,**************************************************:             CLE148
           L.LNRF  as PADLNRF,                                                  :             CLE148
******DIGITS(L.CNUM)*as*PADCNUM,************************************************:             CSD027
******DIGITS(L.FCUS)*as*PADFCUS,************************************************:             CSD027
             L.CNUM  as PADCNUM,                                                :             CSD027
             L.FCUS  as PADFCUS,                                                :             CSD027
      DIGITS(L.FTYP) as PADFTYP,                                                :
      DIGITS(L.FSEQ) as PADFSEQ,                                                :
      DIGITS(L.PTYP) as PADPTYP,                                                :
******DIGITS(L.PTFC)*as*PADPTFC,************************************************: /*BUG9970*/ CSF011
             L.PTFC  as PADPTFC,                                                :             CSF011
    CASE                                                                        :
     WHEN L.PTYP in (66,67,69,72) THEN 'PS' WHEN L.PTYP IN (64,65,68,71)        :
     THEN 'PP' ELSE 'LN' END AS LOANCLASS,                                      :
*****CASE*WHEN*L.PTYP*IN*(66,67,69,72)*THEN*DIGITS(L.OLNO)**********************:             CSD027
     CASE WHEN L.PTYP IN (66,67,69,72) THEN        L.OLNO                       :             CSD027
       ELSE '' END AS SALELOAN,                                                 :
*****CASE*WHEN*L.PTYP*IN*(64,65,68,71)*THEN*DIGITS(L.OLNO)**********************:             CSD027
     CASE WHEN L.PTYP IN (64,65,68,71) THEN        L.OLNO                       :             CSD027
       ELSE '' END AS ORIGBRWR                                                  :
    , PRTR, SYIN, MCCY                                                          :         /*CLE106*/
    , SD.BBCSSN, SD.BBCRNM, SD.BBCRTN                                           :             CSF011
****FROM*CLOANCL*AS*L***********************************************************:          AR1074315
****,FCLTYFM*F******************************************************************:   CLE106 AR1074315
    FROM CLOANCL AS L CROSS JOIN                                                :          AR1074315
    FCLTYFM F                                                                   :          AR1074315
    LEFT JOIN SDCUSTPD AS SD                                                    :             CSF011
     ON L.CNUM = SD.BBCUST                                                      :             CSF011
     AND L.BRCA = SD.BBBRCD                                                     :             CSF011
   WHERE L.RECI IN ('D','M','R')                                                :
   AND L.FCUS = F.CNUM AND L.FTYP = F.FACT AND L.FSEQ = F.FCNO                  :         /*CLE106*/
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas LE Zone loan view                           ';                     :
