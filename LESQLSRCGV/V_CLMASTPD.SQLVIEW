  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (                                                                             :
  MSTYPE ,                                                                      :
  MSCURR ,                                                                      :
  MSDESC ,                                                                      :
  MSPERC ,                                                                      :
  MSPRIOR ,                                                                     :
  MSZONE )                                                                      :
  AS                                                                            :
  SELECT                                                                        :
  MSTYPE                                                                        :
  ,MSCURR                                                                       :
  ,MSDESC                                                                       :
  ,MSPERC                                                                       :
  ,CASE WHEN TRIM(MSCURR) <> '' THEN 1                                          :
  WHEN TRIM(MSCURR) = '' THEN 2                                                 :
  END AS MSPRIOR                                                                :
  ,MSZONE                                                                       :
  FROM                                                                          :
  GZSDMASTPD ;                                                                  :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( MSTYPE IS 'FX Margin Type' ,                                                :
  MSCURR IS 'Currency' ,                                                        :
  MSDESC IS 'Description' ,                                                     :
  MSPERC IS 'Percentage' ,                                                      :
  MSZONE IS 'Zone' );                                                           :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( MSTYPE TEXT IS 'FX Margin Type' ,                                           :
  MSCURR TEXT IS 'Currency' ,                                                   :
  MSDESC TEXT IS 'Description' ,                                                :
  MSPERC TEXT IS 'Percentage' ,                                                 :
  MSZONE TEXT IS 'Zone' );                                                      :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas LE FX Margin Type Priority                  ';                     :
                                                                                :
