  FROM                                                                          :
  GPTRAPPD AS GPTRAPPD                                                          :
  ,GZSDBRCHPD AS SDBRCHPD                                                       :
  ,GZMMDELDPP AS MMDELDPP                                                       :
  ,GZDLDLDCQD AS DLDLDCQD                                                       :
  ,GZFCLTYFM AS FCLTYFM                                                         :
  WHERE                                                                         :
  GPTRAPPD.T_MOD = 'DL'                                                         :
  AND GPTRAPPD.T_SMOD = 'LDNI'                                                  :
  AND GPTRAPPD.T_TRTP IN ('IP','TI','CL','DL','FL','DP','LP')                   :
  AND GPTRAPPD.T_TR6N = MMDELDPP.HKDN38                                         :
  AND GPTRAPPD.T_TRTP = MMDELDPP.HKMTYP                                         :
  AND GPTRAPPD.T_TRST = MMDELDPP.HKSTYP                                         :
  AND GPTRAPPD.T_BRCA = MMDELDPP.HKBRCA                                         :
  AND DIGITS(MMDELDPP.HKDN38) = DLDLDCQD.F1DLNO                                 :
  AND GPTRAPPD.T_ZONE = SDBRCHPD.A8ZONE                                         :
  AND SDBRCHPD.A8BRCD = FCLTYFM.BRCA                                            :
  AND FCLTYFM.BRCA = DLDLDCQD.F1BRCA                                            :
  AND FCLTYFM.CNUM = DLDLDCQD.F1FCCU                                            :
  AND FCLTYFM.FACT = DLDLDCQD.F1FACT                                            :
  AND FCLTYFM.FCNO = DLDLDCQD.F1FCNO ;                                          :
