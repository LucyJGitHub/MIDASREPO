  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (                                                                             :
  T_ZONE ,                                                                      :
  T_CCID ,                                                                      :
  T_ID ,                                                                        :
  T_MOD ,                                                                       :
  T_SMOD ,                                                                      :
  T_SNAM ,                                                                      :
  RCCY ,                                                                        :
  T_RCCY ,                                                                      :
  T_NBDP ,                                                                      :
  T_SPRT ,                                                                      :
  T_MDIN ,                                                                      :
  T_TDAT ,                                                                      :
  T_SDAT ,                                                                      :
  T_EDAT ,                                                                      :
  T_TRTP ,                                                                      :
  T_TRST ,                                                                      :
  MTID ,                                                                        :
  MTFACEXRT ,                                                                   :
  MTFACMDI ,                                                                    :
  MTUSEFXRT ,                                                                   :
  BRCA ,                                                                        :
  CNUM ,                                                                        :
  FACT ,                                                                        :
  FCNO ,                                                                        :
  FCCY ,                                                                        :
  FCNBDP ,                                                                      :
  FCSPRT ,                                                                      :
  FCMDIN ,                                                                      :
  MTREMARK )                                                                    :
  AS                                                                            :
  SELECT                                                                        :
  T_ZONE                                                                        :
  ,T_CCID                                                                       :
  ,T_ID                                                                         :
  ,T_MOD                                                                        :
  ,T_SMOD                                                                       :
  ,T_SNAM                                                                       :
  ,T_RCCY AS RCCY                                                               :
  ,CASE WHEN T_VCCY = TRIM('') THEN T_RCCY                                      :
  ELSE T_VCCY END AS T_RCCY                                                     :
  ,CASE WHEN T_VCCY = TRIM('') THEN RCCY.A6NBDP                                 :
  ELSE VCCY.A6NBDP END AS T_NBDP                                                :
  ,CASE WHEN T_VCCY = TRIM('') THEN RCCY.A6SPRT                                 :
  ELSE VCCY.A6SPRT END AS T_SPRT                                                :
  ,CASE WHEN T_VCCY = TRIM('') THEN RCCY.A6MDIN                                 :
  ELSE VCCY.A6MDIN END AS T_MDIN                                                :
  ,T_TDAT                                                                       :
  ,T_SDAT                                                                       :
  ,T_EDAT                                                                       :
  ,T_TRTP                                                                       :
  ,T_TRST                                                                       :
  ,ML.MTID                                                                      :
  ,CL.MTFACEXRT                                                                 :
  ,CL.MTFACMDI                                                                  :
  ,CL.MTUSEFXRT                                                                 :
  ,FCLTY.BRCA                                                                   :
  ,FCLTY.CNUM                                                                   :
  ,FCLTY.FACT                                                                   :
  ,FCLTY.FCNO                                                                   :
  ,FCLTY.FCCY                                                                   :
  ,FCCY.A6NBDP AS FCNBDP                                                        :
  ,FCCY.A6SPRT AS FCSPRT                                                        :
  ,FCCY.A6MDIN AS FCMDIN                                                        :
  ,ML.MTREMARK                                                                  :
  FROM                                                                          :
  GPWTRAPPD                                                                     :
  LEFT OUTER JOIN                                                               :
  GZSDCURRPD VCCY                                                               :
  ON                                                                            :
  T_VCCY = VCCY.A6CYCD                                                          :
  AND T_ZONE = VCCY.A6ZONE                                                      :
  ,T_MLMTRAN ML                                                                 :
  ,T_CLMTRAN CL                                                                 :
  ,GZFCLTYFM FCLTY                                                              :
  ,GZSDCURRPD RCCY                                                              :
  ,GZSDCURRPD FCCY                                                              :
  WHERE                                                                         :
  T_MOD = 'MT'                                                                  :
  AND T_TREF = CAST(ML.MTID AS CHAR(20))                                        :
  AND ML.MTID = CL.MTID                                                         :
  AND ML.MTFACBRCD = FCLTY.BRCA                                                 :
**AND*ML.MTFACCUST*=*DIGITS(FCLTY.CNUM)*****************************************:             CSD027
  AND ML.MTFACCUST =        FCLTY.CNUM                                          :             CSD027
  AND ML.MTFACTYPE = DIGITS(FCLTY.FACT)                                         :
  AND ML.MTFACSEQ = DIGITS(FCLTY.FCNO)                                          :
  AND T_RCCY = RCCY.A6CYCD                                                      :
  AND T_ZONE = RCCY.A6ZONE                                                      :
  AND FCLTY.FCCY = FCCY.A6CYCD                                                  :
  AND T_ZONE = FCCY.A6ZONE ;                                                    :
                                                                                :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( T_ZONE IS 'Zone' ,                                                          :
  T_CCID IS 'Commitment Cycle ID' ,                                             :
  T_ID IS 'Identifier' ,                                                        :
  T_MOD IS 'Module' ,                                                           :
  T_SMOD IS 'Sub-Module' ,                                                      :
  T_SNAM IS 'Shortname' ,                                                       :
  T_TDAT IS 'Transaction Date' ,                                                :
  T_SDAT IS 'Start Date' ,                                                      :
  T_EDAT IS 'End Date' ,                                                        :
  T_TRTP IS 'Transaction         Type' ,                                        :
  T_TRST IS 'Transaction         Sub Type' ,                                    :
  MTID IS 'Transaction Id' ,                                                    :
  MTFACEXRT IS 'Facility Currency Exchange Rate' ,                              :
  MTFACMDI IS 'Facility Currency Multiply/Divide Indicator' ,                   :
  MTUSEFXRT IS 'Used Fix Rates' ,                                               :
  BRCA IS 'Brch                Code' ,                                          :
  CNUM IS 'Customer            Number' ,                                        :
  FACT IS 'Facil               Type' ,                                          :
  FCNO IS 'Fac                 No' ,                                            :
  FCCY IS 'Facil               Curr' ,                                          :
  MTREMARK IS 'Narrative' ) ;                                                   :
                                                                                :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( T_ZONE TEXT IS 'Zone' ,                                                     :
  T_CCID TEXT IS 'Commitment Cycle ID' ,                                        :
  T_ID TEXT IS 'Identifier' ,                                                   :
  T_MOD TEXT IS 'Module' ,                                                      :
  T_SMOD TEXT IS 'Sub-Module' ,                                                 :
  T_SNAM TEXT IS 'Shortname' ,                                                  :
  RCCY TEXT IS 'Risk Currency' ,                                                :
  T_TDAT TEXT IS 'Transaction Date' ,                                           :
  T_SDAT TEXT IS 'Start Date' ,                                                 :
  T_EDAT TEXT IS 'End Date' ,                                                   :
  T_TRTP TEXT IS 'Transaction Type' ,                                           :
  T_TRST TEXT IS 'Transaction Sub Type' ,                                       :
  MTID TEXT IS 'Transaction Id' ,                                               :
  MTFACEXRT TEXT IS 'Facility Currency Exchange Rate' ,                         :
  MTFACMDI TEXT IS 'Facility Currency Multiply/Divide Indicator' ,              :
  MTUSEFXRT TEXT IS 'Used Fix Rates' ,                                          :
  BRCA TEXT IS 'Branch Code - Alpha' ,                                          :
  CNUM TEXT IS 'Customer number' ,                                              :
  FACT TEXT IS 'Facility type' ,                                                :
  FCNO TEXT IS 'Facility number' ,                                              :
  FCCY TEXT IS 'Facility currency' ,                                            :
  FCNBDP TEXT IS 'Number of Decimal Places' ,                                   :
  FCSPRT TEXT IS 'Spot Rate' ,                                                  :
  FCMDIN TEXT IS 'Multiply/Divide Indicator' ,                                  :
  MTREMARK TEXT IS 'Narrative' ) ;                                              :
