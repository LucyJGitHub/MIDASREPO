  ( DLNO TEXT IS 'DEAL NUMBER' ,                                                :
  COLA TEXT IS 'COLLATERAL AMOUNT' ,                                            :
  AURO TEXT IS 'AUTO ROLLOVER' ,                                                :
  ROFQ TEXT IS 'ROLLOVER FREQUENCY' ,                                           :
