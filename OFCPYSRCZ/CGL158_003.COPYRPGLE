     C     TransTYPE     WHENEQ    'NSRM'
     C     CGL158        ANDEQ     'Y'
      *
     C                   EVAL      NSAction = Buffer
      *
     C     NSAction      IFEQ      'I'
     C     NSAction      OREQ      'A'
 
     C                   EXSR      NSRMFmts
 
     C     NSRMLen       SUBST     BUFFER:Bfp    NSRMParm
     C                   ADD       NSRMLen       Bfp
 
     C                   CALL      'GLNSRMVU'
