  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT BRCA,CUSN,CCYD,ACDE,ASNC,A7NONB,VUDT,                                  :
  CAST(SUM(CASE WHEN DORC='1' THEN MVAM*-1 ELSE MVAM END) AS DECIMAL(13,0))     :
  AS TMVAM                                                                      :
  FROM RSACMTPD                                                                 :
  INNER JOIN SDNOSTPD ON BRCA = A7BRCD AND CCYD = A7CYCD AND                    :
  CUSN=A7CUST AND ACDE=A7ACCD AND ASNC=A7ACSN                                   :
  LEFT JOIN PRONOPN ON CCY = A7CYCD AND NOSN = A7NONB                           :
  WHERE CCY IS NULL                                                             :
  GROUP BY BRCA,CUSN,CCYD,ACDE,ASNC,A7NONB,VUDT                                 :
  ;                                                                             :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas OF Projected Mov. Tot no PRONOPN view       ';                     :
