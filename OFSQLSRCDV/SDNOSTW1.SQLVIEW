                                                                                :
  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  NOSR.A7CYCD AS NOSRCCRY,NOSR.A7NONB AS NOSRNO,                                :
      NOSR.A7CYCD CONCAT NOSR.A7NONB AS NOSRCODE,                               :
***IFNULL(NOSREX2.ERPOOL,'')*as*NOSRPOOL****************************************:           MD031719
   IFNULL(MNCPDTL.P2POOL,'') as NOSRPOOL                                        :           MD031719
    FROM SDNOSTPD NOSR                                                          :
****LEFT*OUTER*JOIN*SDNOST2D*NOSREX2********************************************:           MD031719
    LEFT OUTER JOIN SDMNPDTD MNCPDTL                                            :           MD031719
****ON*(NOSR.A7CYCD*=*NOSREX2.ERCYCD********************************************:           MD031719
******************AND*NOSR.A7NONB*=*NOSREX2.ERNONB)*****************************:           MD031719
    ON (NOSR.A7CYCD || NOSR.A7NONB = MNCPDTL.P2NOST                             :           MD031719
                  AND MNCPDTL.P2RECI = 'D')                                     :           MD031719
                                                                                :
