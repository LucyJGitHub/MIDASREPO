  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT A.A7CUST AS NSCUST, A. TFNOSC AS NSNOSC,                               :
  A.TFCCY AS NSCCY, A.TFDATE AS NSDATE,                                         :
  B.BBCRNM AS NSCRNM, B.BBCRTN AS NSCRTN,                                       :
  B.ANAM AS NSANAM, A.NSFAMNT AS NSFAMNT,
/*CASE*WHEN*A.NSTAAMNT*>*0*THEN*A.NSTAAMNT*ELSE*A.NSAAMNT*END*AS*NSACTUAL,******:           MD027106
/*A.NSFAMNT*-*CASE*WHEN*A.NSTAAMNT*>*0*THEN*A.NSTAAMNT*ELSE*A.NSAAMNT*END*******:           MD027106
  A.NSTAAMNT + A.NSAAMNT AS NSACTUAL,                                           :           MD027106
  A.NSFAMNT  - (A.NSTAAMNT + A.NSAAMNT)                                         :           MD027106
  AS NSDIFF FROM GZGLNOSTW0 A LEFT OUTER JOIN GZSDNOSTW0 B                      :
  ON A.TFNOSC = B.A7NONB AND A.TFCCY = B.A7CYCD                                 :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas OF Nostro Summary View                      ';                     :
