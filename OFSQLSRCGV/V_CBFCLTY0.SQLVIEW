  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT FM.*, FN.CAMD                                                          :
  FROM                                                                          :
   GZFCLTYFM FM                                                                 :
      INNER JOIN GZFCLTYFN FN                                                   :
          ON FN.CNUM = FM.CNUM                                                  :
                 AND FN.FACT = FM.FACT                                          :
                 AND FN.FCNO = FM.FCNO                                          :
                 AND FM.BRCA = FN.ZZ003;                                        :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas OF Credit Utilisation & Collateral-Based Enq';                     :
