  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT CD.*, CA.CAFCUS, CA.CAFTYP, CA.CAFSEQ, CA.CAMODS, AM.AMFCNM, AM.AMFCTY :
  FROM                                                                          :
   GZGLCOLLPD CD                                                                :
      LEFT JOIN GZGLCOLAPD CA                                                   :
          ON (CA.CACREF = CD.CDCREF and CD.CDZONE = CA.CAZONE)                  :
      LEFT JOIN GZSDFACTPD AM                                                   :
        ON (AM.AMZONE = CD.CDZONE and CA.CAFTYP = cast(AM.amfcty as integer))   :
        OR (AM.AMZONE = CD.CDZONE and CD.CDFTYP = cast(AM.amfcty as integer));  :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas OF Credit Utilisation & Collateral-Based Enq';                     :
                                                                                :
