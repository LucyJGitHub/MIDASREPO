  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT  A.*,                                                                  :
   B.CDZONE AS FCZONE,                                                          :
   B.AMFCNM AS FCFCNM,                                                          :
   B.CDCREF AS FCCREF,                                                          :
   B.CDCOPT AS FCCOPT,                                                          :
   B.CDCCY AS FCDCCY,                                                           :
   B.CDLAMT AS FCLAMT                                                           :
  FROM                                                                          :
       V_FCLTYDET A INNER JOIN                                                  :
       V_COLLDET0 B                                                             :
       ON B.AMFCTY = A.FCFTYP  AND B.CDBRCA = A.FCFBRC                          :
  WHERE  ((B.CDGNSP = 'S' AND B.CDBRCA = A.FCFBRC AND                           :
         B.CDFCUS = A.FCFCUS AND                                                :
         B.CDFTYP = A.FCFTYP AND                                                :
         B.CDFSEQ =  A.FCFSEQ AND                                               :
         B.CDMODS = 'LE' AND B.CDRECI = 'D')                                    :
         OR (B.CDGNSP = 'G' AND                                                 :
         B.CAFCUS = A.FCFCUS AND                                                :
         B.CAFTYP = A.FCFTYP AND                                                :
         B.CAFSEQ = A.FCFSEQ AND                                                :
         B.CAMODS = 'LE'))                                                      :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas OF Credit Utilisation & Collateral-Based Enq';                     :
                                                                                :
