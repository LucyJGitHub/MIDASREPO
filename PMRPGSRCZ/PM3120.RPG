     C**************************************************************************
     C* LOAD SUBFILE FOR ENQUIRY ONLY
     C**************************************************************************
     C*
     C           LOASFE    BEGSR
     C*
     C* INIT SCREEN LINE NUMBER
     C                     Z-ADD0         WWCPT   20
     C*
     C***********DACNUM    SETLLSDPATTL1                                  CPM005
     C           WWAID     IFNE 'UP'                       B1             CPM005
     C                     MOVELDACNUM    PCUST   6                       CPM005
     C                     CALL 'AOPATTR0'                                CPM005
     C                     PARM *BLANKS   PRTCD   7                       CPM005
     C                     PARM '*KEY'    POPTN   7                       CPM005
     C                     PARM           PCUST                           CPM005
     C                     PARM '    '    PUSID  20                       CPM005
     C           SDPATT    PARM SDPATT    DSFDY                           CPM005
     C                     ENDIF                                          CPM005
     C*
     C**ROLL*UP********************************************************   CPM005
     C***********WWAID     IFEQ 'UP'                       B1             CPM005
     C***********          MOVELWWSAVE    DAUSID 20                       CPM005
     C***********DASELE    SETLLSDPATTL1                                  CPM005
     C***********          END                             E1             CPM005
     C*
     C***********          READ SDPATTL1                 39               CPM005
     C*
     C**   CLEAR MESSAGES FROM PROGRAM MESSAGE QUEUE.
     C*
     C                     CALL 'Y2CLMSC'
     C                     PARM           WWTPGQ 10
     C                     PARM           WWPGQR  5
     C*
     C* LOAD SUBFILE
     C************IN39     DOWEQ'0'                        B1             CPM005
     C           PRTCD     DOWEQ*BLANKS                    B1             CPM005
     C           WWCPT     ANDLT5
     C***********FBCUST    ANDEQDACNUM                                    CPM005
     C           F2CUST    ANDEQDACNUM                                    CPM005
     C*
     C* LOAD FIELDS
     C                     ADD  1         RRN        81
     C                     ADD  1         WWCPT            SCREEN LINE MBR
     C*
     C* SET UP SUBFILE FIELDS
     C*
     C***********          MOVELFBUSID    DDUSID                          CPM005
     C***********          MOVELFBACHO    DDACHO                          CPM005
     C***********          MOVELFBVECO    DDVECO                          CPM005
     C***********          MOVELFBWRCO    DDWRCO                          CPM005
     C***********          MOVELFBSIGN    DDSIGN                          CPM005
     C***********          MOVELFBPOWA    DDPOWA                          CPM005
     C***********          MOVELFBDOCO    DDDOCO                          CPM005
     C                     MOVELF2URID    DDUSID                          CPM005
     C                     MOVELF2ACHO    DDACHO                          CPM005
     C                     MOVELF2VECO    DDVECO                          CPM005
     C                     MOVELF2WRCO    DDWRCO                          CPM005
     C                     MOVELF2SIGN    DDSIGN                          CPM005
     C                     MOVELF2POWA    DDPOWA                          CPM005
     C                     MOVELF2DOCI    DDDOCO                          CPM005
     C***********FBBIRT    IFNE *ZEROS                     B2             CPM005
     C***********          MOVE FBBIRT    DDBIRT                          CPM005
     C           F2BIRT    IFNE *ZEROS                     B2             CPM005
     C                     MOVE F2BIRT    DDBIRT                          CPM005
     C                     ELSE                            X2
     C                     MOVE *BLANKS   DDBIRT
     C                     END                             E2
     C***********          MOVELFBPASN    DDPASN                          CPM005
     C***********          MOVELFBTEXT    DDTEXT                          CPM005
     C                     MOVELF2PASN    DDPASN                          CPM005
     C           F2UTX1    CAT  F2UTX2    DDTEXT                          CPM005
     C*
     C* WRITE IN SUBFILE
     C                     WRITEPM3120S1
     C*
     C* READ NEXT RECORD
     C***********          READ SDPATTL1                 39               CPM005
     C                     CALL 'AOPATTR0'                                CPM005
     C                     PARM *BLANKS   PRTCD                           CPM005
     C                     PARM '*NEXT'   POPTN                           CPM005
     C                     PARM           PCUST   6                       CPM005
     C                     PARM           PUSID  20                       CPM005
     C           SDPATT    PARM SDPATT    DSFDY                           CPM005
     C*
     C***********          MOVE FBUSID    WWSAVE 20                       CPM005
     C                     MOVE F2URID    WWSAVE 20                       CPM005
     C*
     C                     END                             E1
     C*
     C***********DACNUM    IFNE FBCUST                                    CPM005
     C           DACNUM    IFNE F2CUST                     - B1           CPM005
     C           PRTCD     OREQ '*EOF'                                    CPM005
     C                     MOVE *ON       *IN39            SFLEND         CPM005
     C                     END                             - E1
     C*
     C                     Z-ADDRRN       WWRRN   40
     C*
     C                     ENDSR
     C**************************************************************************
