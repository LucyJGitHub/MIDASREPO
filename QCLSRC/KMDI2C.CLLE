   /*================================================================*/
   /*  START OF PROGRAM                                              */
   /*================================================================*/
             /*                                                      */
             PGM        PARM(&CALL &PGM &LIB &SUB)
             DCL        VAR(&CALL) TYPE(*DEC) LEN(3 0)
             DCL        VAR(&PGM) TYPE(*CHAR) LEN(10)
             DCL        VAR(&LIB) TYPE(*CHAR) LEN(10)
             DCL        VAR(&SUB) TYPE(*DEC) LEN(3 0)

             DCLF       FILE(X7PF)

 LP:         RCVF
 /* Let RCVF fail on EOF since it should never happen */
             IF         COND(&CALL *NE &X7KEY) THEN(GOTO CMDLBL(LP))
             CHGVAR     VAR(&PGM) VALUE(&X7PGM)
             CHGVAR     VAR(&LIB) VALUE(&X7LIB)
             CHGVAR     VAR(&SUB) VALUE(&X7SUB)
             RETURN
             ENDPGM
