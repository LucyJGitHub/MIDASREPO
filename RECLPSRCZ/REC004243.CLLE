/**Override*necessary*files*to*be*used*in*extract*program**             */            /* AR737480 */
 
/**********  OVRDBF     FILE(REPINFL0) TOFILE(QTEMP/REPINFL0)                         /* AR737480 */
 
/* Call extract program */
 
             CALL       PGM(RE004243)
 
/* Database error processing */
 
             IF         COND(%SWITCH(XXXXXX11)) THEN(DO)
                RTVDTAARA  DTAARA(LDA (134 50)) RTNVAR(&MEM)
                ROLLBACK
                SNDPGMMSG  MSGID(MEM0001) MSGF(MIDAS) MSGDTA(&MEM) +
                             TOPGMQ(*EXT) TOMSGQ(MOPERQ)
                GOTO       CMDLBL(END)
             ENDDO
 
/* Call report program */
 
             CALL       PGM(RE004244)
 
/**Copy*records*for*reference**                                         */            /* AR737480 */
 
/**********  CPYF       FROMFILE(QTEMP/REPINFPD) TOFILE(REPINFPD) +     */            /* AR737480 */
