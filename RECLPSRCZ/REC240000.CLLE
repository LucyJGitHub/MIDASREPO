             CALL       PGM(GP240000) PARM(&RTCD &ZOZONE)                               /*BUG27288*/
 
/* error */                                                                             /*BUG27288*/
             IF         COND(&RTCD ¬= '       ') THEN(DO)                               /*BUG27288*/
                GOTO       CMDLBL(ABNOR)                                                /*BUG27288*/
             ENDDO                                                                      /*BUG27288*/
 
             CALL       PGM(RE240000)
 
