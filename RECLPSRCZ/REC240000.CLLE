             CALL       PGM(GOGETZONE) PARM(&RTCD &ERMS &FULLCHECK +
                          &ZOZONE &ZOSHTC &ZORDNB &ZODNWD &ZOBCCY +
                          &ZONJOB)                                                      /*BUG27288*/
 
/* error */                                                                             /*BUG27288*/
             IF         COND(&RTCD ¬= '       ') THEN(DO)                               /*BUG27288*/
                GOTO       CMDLBL(ABNOR)                                                /*BUG27288*/
             ENDDO                                                                      /*BUG27288*/
 
/* Call housekeep program */                                                            /*BUG27288*/
 
/**********  STRCMTCTL  LCKLVL(*CHG) CMTSCOPE(*ACTGRP) */                     /*BUG27288 AR1005229*/
