  HASQ TEXT IS 'CHARGES SEQUENCE' ,                                              :
  HAMT TEXT IS 'CHARGES AMOUNT' ,                                                :
  HSGN TEXT IS 'Charges sign (+ or -)' ,                                         :
  CHRN TEXT IS 'CHARGES RETAIL NO.' ,                                            :
  DRVD TEXT IS 'Debit Value Date' ) ;                                            :
