  **********/**********                                                          :
  ( RECI TEXT IS 'Record Id' ,                                                   :
  IPDN TEXT IS 'Input document number' ,                                         :
  DRBR TEXT IS 'DR A/C Branch' ,                                                 :
  VALD TEXT IS 'Value date' ,                                                    :
  DCUS TEXT IS 'Debit customer number' ,                                         :
  DCOD TEXT IS 'Debit account code' ,                                            :
  DACS TEXT IS 'Debit account sequence nos.' ,                                   :
  DRAN TEXT IS 'Debit retail a/c number' ,                                       :
  DRCY TEXT IS 'Debit currency' ,                                                :
  DRAM TEXT IS 'Debit amount' ,                                                  :
  CHQN TEXT IS 'Cheque number' ,                                                 :
  CCUS TEXT IS 'Credit customer number' ,                                        :
  CACS TEXT IS 'Credit account seq. number' ,                                    :
  CRCY TEXT IS 'Credit currency' ,                                               :
  CRAM TEXT IS 'Credit amount' ,                                                 :
  CRNA TEXT IS 'Cr. narrative' ,                                                 :
  EXRT TEXT IS 'Exchange rate' ,                                                 :
  ORIN TEXT IS 'Override indicator' ,                                            :
