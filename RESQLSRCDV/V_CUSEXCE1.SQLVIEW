  **********/**********                                                          :
  ( RECI IS 'Rec                 Id' ,                                           :
  DRBR IS 'drbr' ,                                                               :
  VALD IS 'Value               Date' ,                                           :
  DCUS IS 'Debit               Cust.               Numb.' ,                      :
  DCOD IS 'Dcod      ' ,                                                         :
  DACS IS 'Deb                 Acsq                No.' ,                        :
  DRAN IS 'Debit ret           Acc no' ,                                         :
  DRAM IS 'Dram      ' ,                                                         :
  DRNA IS 'DRNA0' ,                                                              :
  CHQN IS 'Cheque              Number' ,                                         :
  CCUS IS 'Credit              Customer            No.' ,                        :
  CCOD IS 'CCOD0' ,                                                              :
  CRAN IS 'CRAN0' ,                                                              :
  CRAM IS 'Cram      ' ,                                                         :
  EXRT IS 'Exchange            Rate' ,                                           :
  BCEQ IS 'Base ccy            Equivalent          Of evnt amt' ,                :
  HCUS IS 'Hcus  ' ,                                                             :
  HACD IS 'Hacd  ' ,                                                             :
  HASQ IS 'Hasq  ' ,                                                             :
  HAMT IS 'Hamt  ' ,                                                             :
  HSGN IS 'Chg                 Sgn' ,                                            :
  CHRN IS 'Chrn  ' ,                                                             :
  DRVD IS 'Debit               Value               Date' ) ;                     :
