                                                                                :
  CREATE VIEW                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
     RECI                                                                       :
   , BRCA                                                                       :
   , ATYP                                                                       :
   , STYP                                                                       :
   , CNUM                                                                       :
   , CCY                                                                        :
   , ACODQQ                                                                     :
   , ACSQ                                                                       :
   , ACNO                                                                       :
   , CASK                                                                       :
   , CRNM                                                                       :
   , ACOC                                                                       :
   , EFAC                                                                       :
   , RETB                                                                       :
   , LRCR                                                                       :
   , LDBL                                                                       :
   , CLBL                                                                       :
   , HELD                                                                       :
   , MINB                                                                       :
   , ODLN                                                                       :
   , ODED                                                                       :
   , DLIM                                                                       :
   , EPLB                                                                       :
   , EPCB                                                                       :
   , RTLB                                                                       :
   , RTCB                                                                       :
   , STFQ                                                                       :
   , DACO                                                                       :
   , ZZ020                                                                      :
   , ACOD                                                                       :
  )                                                                             :
                                                                                :
  AS SELECT                                                                     :
     A.RECI                                                                     :
   , A.BRCA                                                                     :
   , A.ATYP                                                                     :
   , A.STYP                                                                     :
   , A.CNUM                                                                     :
   , A.CCY                                                                      :
   , A.ACODQQ                                                                   :
   , A.ACSQ                                                                     :
   , A.ACNO                                                                     :
   , C.CASK                                                                     :
   , C.CRNM                                                                     :
   , C.ACOC                                                                     :
   , A.EFAC                                                                     :
   , A.RETB                                                                     :
   , A.LRCR                                                                     :
   , A.LDBL                                                                     :
   , A.CLBL                                                                     :
   , A.HELD                                                                     :
   , A.MINB                                                                     :
   , A.ODLN                                                                     :
   , A.ODED                                                                     :
   , A.DLIM                                                                     :
   , A.EPLB                                                                     :
   , A.EPCB                                                                     :
   , A.RTLB                                                                     :
   , A.RTCB                                                                     :
   , A.STFQ                                                                     :
   , A.DACO                                                                     :
   ,'                  ' AS ZZ020                                               :
   , A.ACOD                                                                     :
  FROM                                                                          :
     ACCNTAB A                                                                  :
  LEFT OUTER JOIN                                                               :
     CLINTCB C                                                                  :
  ON                                                                            :
     A.CNUM = C.CNUM                                                            :
  WHERE A.RECI = 'D' AND A.ATYP = 'R'                                           :
                                                                                :
  RCDFMT QACCBL1;                                                               :
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas RE Account Balance Details                  ';                     :
                                                                                :
