                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       FPPRODID                                                                 :
     , FPCATG                                                                   :
     , FPCLASS                                                                  :
     , FPTYP                                                                    :
     , FPSTYP                                                                   :
     , FPDESC                                                                   :
     , FPRULESET                                                                :
     , FPMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.FPPRODID                                                               :
     , u.FPCATG                                                                 :
     , u.FPCLASS                                                                :
     , u.FPTYP                                                                  :
     , u.FPSTYP                                                                 :
     , u.FPDESC                                                                 :
     , x.FPRULESET                                                              :
     , u.FPMODE                                                                 :
  from GPFRSUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  GPFRSXTD x                                                                    :
  on                                                                            :
  u.FPRULESET = x.FPRULESET and u.FPPRODID = x.FPPRODID                         :
                                                                                :
  rcdfmt GPFRSJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas RN - FRS Product Codes                 Joint';                     :
