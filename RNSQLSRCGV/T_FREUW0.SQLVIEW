                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    ENTCODE                                                                     :
  , ENTDESC                                                                     :
  , "ZONE"                                                                      :
  , ENMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.ENTCODE                                                                :
     , c.ENTDESC                                                                :
     , c."ZONE"                                                                 :
     , c.ENMODE                                                                 :
  from T_FRECTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.ENTCODE                                                                :
     , b.ENTDESC                                                                :
     , b."ZONE"                                                                 :
     , b.ENMODE                                                                 :
  from T_FREBTD b                                                               :
