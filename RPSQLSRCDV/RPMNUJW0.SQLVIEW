                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       MNMGRP                                                                   :
     , MNICDE                                                                   :
     , MNINAR                                                                   :
     , MNPCMD                                                                   :
     , MNPARA                                                                   :
     , MNACTI                                                                   :
     , MNMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.MNMGRP                                                                 :
     , x.MNICDE                                                                 :
     , u.MNINAR                                                                 :
     , u.MNPCMD                                                                 :
     , u.MNPARA                                                                 :
     , x.MNACTI                                                                 :
     , u.MNMODE                                                                 :
  from RPMNUUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  RPMNUXTD x                                                                    :
  on                                                                            :
  u.MNMGRP = x.MNMGRP and u.MNICDE = x.MNICDE                                   :
                                                                                :
  rcdfmt RPMNUJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas RP PB replication functions control fi Joint';                     :
