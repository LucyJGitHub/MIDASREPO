                                                                                :
  create table                                                                  :
  **********/**********                                                         :
  (                                                                             :
    CFFILE CHAR(10) NOT NULL DEFAULT ''                                         :
  , CFFLDD CHAR(20) NOT NULL DEFAULT ''                                         :
  , CFMODE CHAR(1)  NOT NULL DEFAULT ''                                         :
  )                                                                             :
                                                                                :
  RCDFMT SCFFDXT0  ;                                                            :
                                                                                :
  LABEL ON TABLE **********/**********                                          :
  IS 'Midas SC File Field Definitions Extension         ';                      :
                                                                                :
  LABEL ON COLUMN **********/**********                                         :
  (                                                                             :
    CFFILE IS 'File'                                                            :
  , CFFLDD IS 'Field Definition'                                                :
  , CFMODE IS 'Mode'                                                            :
  ) ;                                                                           :
                                                                                :
  LABEL ON COLUMN **********/**********                                         :
  (                                                                             :
    CFFILE TEXT IS 'File'                                                       :
  , CFFLDD TEXT IS 'Field Definition'                                           :
  , CFMODE TEXT IS 'Mode'                                                       :
  );                                                                            :
