  TRMMSN IS 'Midas Module        Shortname' ,                                    :
  TRMODE IS 'Mode'                                                               :
  ) ;                                                                            :
                                                                                 :
  LABEL ON COLUMN **********/**********                                          :
  (                                                                              :
  TRACTV TEXT IS 'Trigger Active Y/N' ,                                          :
  TRFILE TEXT IS 'Trigger File' ,                                                :
  TRTIME TEXT IS 'Trigger Time (B/A)' ,                                          :
  TREVNT TEXT IS 'Trigger Event (I/D/U/R)' ,                                     :
