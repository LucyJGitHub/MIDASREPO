  (                                                                              :
  TRACTV IS 'Trigger             Active              Y/N' ,                      :
  TRFILE IS 'Trigger             File' ,                                         :
  TRTIME IS 'Trigger             Time' ,                                         :
  TREVNT IS 'Trigger             Event' ,                                        :
  TRSEQ IS 'Trigger             Sequence' ,                                      :
  TRPGM IS 'Program             to Call' ,                                       :
  TRPGML IS 'Program             Library' ,                                      :
