    TRACTV CHAR(1) NOT NULL DEFAULT ''                                           :
  , TRFILE CHAR(10) NOT NULL DEFAULT ''                                          :
  , TRTIME CHAR(1) NOT NULL DEFAULT ''                                           :
  , TREVNT CHAR(1) NOT NULL DEFAULT ''                                           :
  , TRSEQ CHAR(2) NOT NULL DEFAULT ''                                            :
  , TRPGM CHAR(10) NOT NULL DEFAULT ''                                           :
  , TRPGML CHAR(10) NOT NULL DEFAULT ''                                          :
  , TRUNQI CHAR(10) NOT NULL DEFAULT ''                                          :
  , TRMMSN CHAR(10) NOT NULL DEFAULT ''                                          :
