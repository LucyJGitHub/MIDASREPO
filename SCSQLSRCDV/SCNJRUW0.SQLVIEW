                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    NJFILE                                                                      :
  , NJACTV                                                                      :
  , NJOTYP                                                                      :
  , NJMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.NJFILE                                                                 :
     , c.NJACTV                                                                 :
     , c.NJOTYP                                                                 :
     , c.NJMODE                                                                 :
  from SCNJRCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.NJFILE                                                                 :
     , b.NJACTV                                                                 :
     , b.NJOTYP                                                                 :
     , b.NJMODE                                                                 :
  from SCNJRBTD b                                                               :
                                                                                :
  rcdfmt SCNJRUT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SC Midas files not to be journalled Union ';                       :
