                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       ABSARN                                                                   :
     , ABSARD                                                                   :
     , ABLCD                                                                    :
     , ABTYLC                                                                   :
     , ZONE                                                                     :
     , ENABLD                                                                   :
     , MODE                                                                     :
  )                                                                             :
  as select                                                                     :
       u.SARN                                                                   :
     , u.SARD                                                                   :
     , x.LCD                                                                    :
     , x.TYLC                                                                   :
     , x.ZONE                                                                   :
     , x.ENABLD                                                                 :
     , u.MODE                                                                   :
  from SCSRDUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SCSRDXTD x                                                                    :
  on                                                                            :
      u.SARN = x.SARN                                                           :
  where x.ENABLD = 'E'                                                          :
                                                                                :
  rcdfmt SCSRDJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SC Switchable features desc - joint';                              :
                                                                                :
