                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    AXRELL                                                                      :
  , AXIREL                                                                      :
  , AXSARN                                                                      :
  , AXSARD                                                                      :
  , AXRSTS                                                                      :
  , SARND                                                                       :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       d.AXRELL                                                                 :
     , d.AXIREL                                                                 :
     , a.AXSARN                                                                 :
     , a.AXSARD                                                                 :
     , a.AXRSTS                                                                 :
     , cast(b.SARN as char(6))                                                  :
  FROM SCSRSUW0 a                                                               :
  LEFT OUTER JOIN SCSRDXTD b on                                                 :
  ( a.AXSARN = b.SARN)                                                          :
  LEFT OUTER JOIN SCRELHPD d on                                                 :
  ( a.AXRELL = d.AXRELL AND a.AXIREL = d.AXIREL)                                :
                                                                                :
  WHERE                                                                         :
  ( cast(b.SARN as char(6)) IS NULL                    and                      :
    d.AXRELL IS NOT NULL  and d.AXIREL IS NOT NULL)                             :
  or                                                                            :
  ( cast(b.SARN as char(6)) IS NULL                    and                      :
    d.AXRELL IS NOT NULL  and d.AXIREL IS NOT NULL)                             :
                                                                                :
  RCDFMT SCSRAJD0   ;                                                           :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SC Core SARs available for insertion' ;                            :
