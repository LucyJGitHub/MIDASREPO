                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       SASARN                                                                   :
     , SAOBJ                                                                    :
     , SATYPE                                                                   :
     , SADEPN                                                                   :
     , SADEL                                                                    :
  )                                                                             :
  as select                                                                     :
       u.SASARN                                                                 :
     , u.SAOBJ                                                                  :
     , u.SATYPE                                                                 :
     , u.SADEPN                                                                 :
     , u.SADEL                                                                  :
  from SCSRAJW0 u                                                               :
  Where u.SADEL = 'N'                                                           : 
                                                                                :
  join                                                                          :
                                                                                :
  SCSRAXTD x                                                                    :
  on                                                                            :
      u.SASARN = x.SASARN AND u.SAOBJ = x.SAOBJ                                 :

  rcdfmt SCSRAJT1;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SC 24x7 Zonal Database Switchable Join File';                      :
