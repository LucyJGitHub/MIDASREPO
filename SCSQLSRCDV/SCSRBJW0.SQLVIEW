                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       GBNMCP                                                                   :
     , GBSQNB                                                                   :
     , GBSARN                                                                   :
     , GBAVAL                                                                   :
     , GBLCD                                                                    :
     , GBLCT                                                                    :
     , GBMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.GBNMCP                                                                 :
     , x.GBSQNB                                                                 :
     , x.GBSARN                                                                 :
     , x.GBAVAL                                                                 :
     , u.GBLCD                                                                  :
     , u.GBLCT                                                                  :
     , x.GBMODE                                                                 :
  from SCSRBUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SCSRBXTD x                                                                    :
  on                                                                            :
      u.GBNMCP = x.GBNMCP and u.GBSQNB = x.GBSQNB and                           :
      u.GBSARN = x.GBSARN                                                       :
                                                                                :
  rcdfmt SCSRBJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SC Midas switchable windows Joint         ';                       :
