  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       ACSARN                                                                   :
     , ACCOTT                                                                   :
     , ACCSEQ                                                                   :
     , ACAVAL                                                                   :
     , ACLCD                                                                    :
     , ACTYLC                                                                   :
     , ACMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.ACSARN                                                                 :
     , x.ACCOTT                                                                 :
     , x.ACCSEQ                                                                 :
     , x.ACAVAL                                                                 :
     , x.ACLCD                                                                  :
     , x.ACTYLC                                                                 :
     , x.ACMODE                                                                 :
  from SCSRCUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SCSRCXTD x                                                                    :
  on                                                                            :
      u.ACSARN = x.ACSARN and u.ACCOTT = x.ACCOTT and                           :
      u.ACCSEQ = x.ACCSEQ                                                       :
                                                                                :
  rcdfmt SCSRCJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SC Switchable f - COB components Joint    ';                       :
