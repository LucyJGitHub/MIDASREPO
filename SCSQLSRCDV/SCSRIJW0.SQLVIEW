                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       ADSARN                                                                   :
     , ADMGRP                                                                   :
     , ADICDE                                                                   :
     , ADRECI                                                                   :
     , ADAVAL                                                                   :
     , ADINAR                                                                   :
     , ADLCD                                                                    :
     , ADTYLC                                                                   :
     , ADINDX                                                                   :
     , ADZONE                                                                   :
     , ADMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.ADSARN                                                                 :
     , u.ADMGRP                                                                 :
     , u.ADICDE                                                                 :
     , u.ADRECI                                                                 :
*****,*u.ADAVAL*****************************************************************:           MD059782
     , x.ADAVAL                                                                 :           MD059782
     , u.ADINAR                                                                 :
     , u.ADLCD                                                                  :
     , u.ADTYLC                                                                 :
     , x.ADINDX                                                                 :
     , u.ADZONE                                                                 :
     , x.ADMODE                                                                 :
  from SCSRIUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SCSRIXTD x                                                                    :
  on                                                                            :
      u.ADSARN = x.ADSARN and u.ADINDX = x.ADINDX                               :
                                                                                :
  rcdfmt SCSRIJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SC Switchable features - menu items Joint ';                       :
