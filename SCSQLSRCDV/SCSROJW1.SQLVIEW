                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       AFSARN                                                                   :
     , AFOBNM                                                                   :
     , AFOBTP                                                                   :
     , AFOBAT                                                                   :
     , AFAVAL                                                                   :
     , AFOBTX                                                                   :
     , ENABLD                                                                   :
  )                                                                             :
  as select                                                                     :
       u.AFSARN                                                                 :
     , u.AFOBNM                                                                 :
     , u.AFOBTP                                                                 :
     , u.AFOBAT                                                                 :
     , u.AFAVAL                                                                 :
     , u.AFOBTX                                                                 :
     , w.ENABLD                                                                 :
  FROM SCSROJW0 u                                                               :
  LEFT OUTER JOIN SCSRDXTD w ON ( u.AFSARN = w.SARN )                           :
  WHERE                                                                         :
  (w.ENABLD = 'E' )                                                             :
  RCDFMT @SAROJ0    ;                                                           :
                                                                                :
  LABEL ON TABLE **********/**********                                          :
  IS 'Midas SC Switchable f - PF Joint' ;                                       :
