       c.AKSARN                                                                 :
     , c.AKPNAM                                                                 :
     , c.AKPRVC                                                                 :
     , c.AKPDSC                                                                 :
     , c.AKTYL1                                                                 :
     , c.AKLCD                                                                  :
     , c.AKMODE                                                                 :
  from SCSRPCTD c                                                               :
