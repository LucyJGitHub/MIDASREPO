  union all                                                                     :
  select                                                                        :
       b.AKSARN                                                                 :
     , b.AKPNAM                                                                 :
     , b.AKPRVC                                                                 :
     , b.AKPDSC                                                                 :
     , b.AKTYL1                                                                 :
     , b.AKLCD                                                                  :
     , b.AKMODE                                                                 :
  from SCSRPBTD b                                                               :
