  as select                                                                     :
       x.AHSARN                                                                 :
     , x.AHRNAM                                                                 :
     , u.AHAVAL                                                                 :
     , u.AHRDSC                                                                 :
     , u.AHLCD                                                                  :
     , u.AHTYLC                                                                 :
     , x.AHMODE                                                                 :
  from SCSRRUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SCSRRXTD x                                                                    :
  on                                                                            :
      u.AHSARN = x.AHSARN and u.AHRNAM = x.AHRNAM                               :
                                                                                :
  rcdfmt SCSRRJT0;                                                              :
