  , TZYEAR CHAR(4) NOT NULL DEFAULT ''                                          :
  , TZSDSC CHAR(20) NOT NULL DEFAULT ''                                         :
  , TZTIBM CHAR(10) NOT NULL DEFAULT ''                                         :
  , TZDESC CHAR(60) NOT NULL DEFAULT ''                                         :
