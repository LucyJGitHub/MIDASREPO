                                                                                :
  RCDFMT SDTIZXT0  ;                                                            :
                                                                                :
  LABEL ON TABLE **********/**********                                          :
  IS 'Midas SD Time Zone File                        Ext';                      :
                                                                                :
  LABEL ON COLUMN **********/**********                                         :
  (                                                                             :
   TZRECI IS 'Record              ID' ,                                         :
   TZTZCD IS 'Time                Zone                Code' ,                   :
   TZYEAR IS 'Year' ,                                                           :
   TZSDSC IS 'Short               Description' ,                                :
   TZTIBM IS 'Time                Zone''Code           IBM' ,                   :
   TZDESC IS 'Description' ,                                                    :
   TZGMT IS 'GMT                 Delta               Time' ,                    :
   TZGMTS IS 'GMT                 Delta               Time''Sign' ,             :
