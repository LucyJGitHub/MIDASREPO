   TZDSTC IS 'DST                 Code' ,                                       :
   TZTMST IS 'TimeStamp' ,                                                      :
   TZLCD IS 'Last                Change              Date' ,                    :
   TZLCHT IS 'Last                Change              Type' ,                   :
   TZUSER IS 'User'  ,                                                          :
   TZMODE IS 'Mode'                                                             :
  ) ;                                                                           :
                                                                                :
  LABEL ON COLUMN **********/**********                                         :
  (                                                                             :
   TZRECI TEXT IS 'Record ID' ,                                                 :
   TZTZCD TEXT IS 'Time Zone Code' ,                                            :
   TZYEAR TEXT IS 'Year' ,                                                      :
