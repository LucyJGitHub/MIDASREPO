                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       FTCSTY                                                                   :
     , FTCSTD                                                                   :
     , FTCSSY                                                                   :
     , FTCSSD                                                                   :
     , FTMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.FTCSTY                                                                 :
     , u.FTCSTD                                                                 :
     , x.FTCSSY                                                                 :
     , u.FTCSSD                                                                 :
     , x.FTMODE                                                                 :
  from SDFTYUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SDFTYXTD x                                                                    :
  on                                                                            :
      u.FTCSTY = x.FTCSTY and u.FTCSSY = x.FTCSSY                               :
                                                                                :
  rcdfmt SDFTYJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SD FATCA Customer Type/Sub Type File Index';                       :
