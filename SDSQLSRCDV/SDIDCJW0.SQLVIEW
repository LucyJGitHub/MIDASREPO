                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       AAIDCD                                                                   :
     , AADESC                                                                   :
     , AAMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.AAIDCD                                                                 :
     , u.AADESC                                                                 :
     , x.AAMODE                                                                 :
  from SDIDCUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SDIDCXTD x                                                                    :
  on                                                                            :
  u.AAIDCD = x.AAIDCD                                                           :
                                                                                :
  rcdfmt SDIDCJT0;                                                              :
