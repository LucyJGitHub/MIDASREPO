     , u.IFENTI                                                                 :
     , u.IFENTD                                                                 :
     , u.IFUSR1                                                                 :
     , u.IFUSR2                                                                 :
     , u.IFUSR3                                                                 :
     , u.IFUSR4                                                                 :
     , u.IFUSR5                                                                 :
     , u.IFPASS                                                                 :
     , u.IFSVL1                                                                 :
     , u.IFSVL2                                                                 :
     , u.IFKNUM                                                                 :
     , x.IFPRCF                                                                 :
     , x.IFMODE                                                                 :
  from SDINFUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SDINFXTD x                                                                    :
  on                                                                            :
      u.IFFILE = x.IFFILE and u.IFENTI = x.IFENTI and                           :
      u.IFENTD = x.IFENTD                                                       :
