  as                                                                            :
  select                                                                        :
       c.FMIETY                                                                 :
     , c.FMLCD                                                                  :
     , c.FMTYLC                                                                 :
     , c.FMDSSQ                                                                 :
     , c.FMENTS                                                                 :
     , c.FMETMP                                                                 :
     , c.FMMODE                                                                 :
  from SDIRMCTD c                                                               :
                                                                                :
