  select                                                                        :
       b.FMIETY                                                                 :
     , b.FMLCD                                                                  :
     , b.FMTYLC                                                                 :
     , b.FMDSSQ                                                                 :
     , b.FMENTS                                                                 :
     , b.FMETMP                                                                 :
     , b.FMMODE                                                                 :
  from SDIRMBTD b                                                               :
