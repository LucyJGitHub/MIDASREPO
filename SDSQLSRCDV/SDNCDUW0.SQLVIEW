                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    NTNWRK                                                                      :
  , NTTRCD                                                                      :
  , NTDESC                                                                      :
  , NTMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.NTNWRK                                                                 :
     , c.NTTRCD                                                                 :
     , c.NTDESC                                                                 :
     , c.NTMODE                                                                 :
  from SDNCDCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.NTNWRK                                                                 :
     , b.NTTRCD                                                                 :
     , b.NTDESC                                                                 :
     , b.NTMODE                                                                 :
  from SDNCDBTD b                                                               :
                                                                                :
  rcdfmt SDNCDUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas Network Transaction Identifier         Union';                     :
