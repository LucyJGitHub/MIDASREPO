                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       GHMMID                                                                   :
     , GLGRUP                                                                   :
     , GLHIND                                                                   :
     , GLDIND                                                                   :
     , GLLANG                                                                   :
     , GLVDTA                                                                   :
     , GLDESC                                                                   :
     , GLMMSN                                                                   :
     , GTSARN                                                                   :
     , FOMMIN                                                                   :
     , GTAVAL                                                                   :
     , SARN                                                                     :
     , ENABLD                                                                   :
     , GLZONE                                                                   :
     , GLMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       e.GHMMID                                                                 :
     , e.GLGRUP                                                                 :
     , a.GLHIND                                                                 :
     , a.GLDIND                                                                 :
     , a.GLLANG                                                                 :
     , a.GLVDTA                                                                 :
     , a.GLDESC                                                                 :
     , a.GLMMSN                                                                 :
     , b.GTSARN                                                                 :
     , d.FOMMIN                                                                 :
     , b.GTAVAL                                                                 :
     , c.SARN                                                                   :
     , c.ENABLD                                                                 :
     , a.GLZONE                                                                 :
     , a.GLMODE                                                                 :
  from SDPWNJW0 a                                                               :
  LEFT OUTER JOIN SCSARWPD b on                                                 :
  ( a.GLHIND = b.GTHIND AND a.GLDIND = b.GTDIND )                               :
  LEFT OUTER JOIN SCSRDXTD c on                                                 :
  ( b.GTSARN = c.SARN )                                                         :
  LEFT OUTER JOIN SDMMIDPD d on                                                 :
  ( a.GLMMSN = d.FOMMSN)                                                        :
  LEFT OUTER JOIN SDPWHJW0 e on                                                 :
  ( a.GLHIND = e.GHHIND)                                                        :
                                                                                :
  WHERE                                                                         :
  ( b.GTSARN IS NULL AND d.FOMMIN = 'Y' ) OR                                    :
  ( b.GTSARN IS NOT NULL AND c.SARN IS NOT NULL AND c.ENABLD = 'E'              :
  AND b.GTAVAL = 'Y' AND d.FOMMIN = 'Y' ) OR                                    :
  ( b.GTSARN IS NOT NULL AND c.SARN IS NULL AND b.GTAVAL = 'N'                  :
  AND d.FOMMIN = 'Y' ) OR                                                       :
  ( b.GTSARN IS NOT NULL AND c.SARN IS NOT NULL AND c.ENABLD = 'D'              :
  AND b.GTAVAL = 'N' AND d.FOMMIN = 'Y' )                                       :                   
                                                                                :
  rcdfmt SDPWNJT1;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SD Midas system pulldown lists Joint' ;                            :
                                                                                :
