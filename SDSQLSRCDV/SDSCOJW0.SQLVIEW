                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       SRCODE                                                                   :
     , SRCDTP                                                                   :
     , SRCDDP                                                                   :
     , SRCDNR                                                                   :
     , SRMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       x.SRCODE                                                                 :
     , x.SRCDTP                                                                 :
     , x.SRCDDP                                                                 :
     , u.SRCDNR                                                                 :
     , x.SRMODE                                                                 :
  from SDSCOUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SDSCOXTD x                                                                    :
  on                                                                            :
      u.SRCODE = x.SRCODE and u.SRCDTP = x.SRCDTP and u.SRCDDP = x.SRCDDP       :
                                                                                :
  rcdfmt SDSCOJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SD SWIFT status and reason codes Joint    ';                       :
