  **********/**********                                                         :
                                                                                :
  (                                                                             :
       TZRECI                                                                   :
     , TZTZCD                                                                   :
     , TZYEAR                                                                   :
     , TZSDSC                                                                   :
     , TZTIBM                                                                   :
     , TZDESC                                                                   :
     , TZGMT                                                                    :
