     , x.TZTZCD                                                                 :
     , x.TZYEAR                                                                 :
     , x.TZSDSC                                                                 :
     , x.TZTIBM                                                                 :
     , x.TZDESC                                                                 :
     , x.TZGMT                                                                  :
     , x.TZGMTS                                                                 :
     , x.TZDSTF                                                                 :
     , x.TZDSTC                                                                 :
     , x.TZTMST                                                                 :
     , x.TZLCD                                                                  :
     , x.TZLCHT                                                                 :
     , x.TZUSER                                                                 :
     , x.TZMODE                                                                 :
  from SDTIZUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  SDTIZXTD x                                                                    :
  on                                                                            :
  u.TZTZCD = x.TZTZCD and u.TZYEAR = x.TZYEAR                                   :
