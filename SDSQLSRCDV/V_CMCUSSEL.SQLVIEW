  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  T.BBCUST,                                                                     :
  T.BBCSSN,                                                                     :
  V.CUSTOMER,                                                                   :
  T.BBBRCD,                                                                     :
  T.BBACOC,                                                                     :
  T.BBCOLC,                                                                     :
  T.BBCNA1,                                                                     :
  T.BBCNA2,                                                                     :
  T.BBCNA3                                                                      :
