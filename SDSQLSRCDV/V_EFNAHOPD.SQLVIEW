 CREATE VIEW
 **********/**********
 AS
 SELECT NHNAHO, NHNARN, NHNATW, NHIDE1, NHIDE2,
 CASE WHEN NHDBTH <> '' then
 VARCHAR_FORMAT(TIMESTAMP_FORMAT(NHDBTH,'YYYYMMDD'),'DD/MM/YYYY')
 END AS NHDBTH,
 NHBTHT, NHBTHC, NHTINO, NHTIN2, NHTIN3, NHCOLC, NHCTN2, NHCTN3
 FROM SDNAHOPD;
 
 LABEL ON TABLE **********/**********
 IS 'Midas SD Non-AC Holder for CRS Controlling Person';
 
 LABEL ON COLUMN **********/**********
 (
 NHNAHO text is 'Non-A/C Holder Reference',
 NHNARN text is 'Report Name',
 NHNATW text is 'Report Town',
 NHIDE1 text is 'Family Name',
 NHIDE2 text is 'First Name',
 NHDBTH text is 'Date of Birth',
 NHBTHT text is 'Place of Birth',
 NHBTHC text is 'Country of Birth',
 NHTINO text is 'TIN 1',
 NHTIN2 text is 'TIN 2',
 NHTIN3 text is 'TIN 3',
 NHCOLC text is 'Country of TIN 1',
 NHCTN2 text is 'Country of TIN 2',
 NHCTN3 text is 'Country of TIN 3'
 );
