  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
       A.AMFCTY,A.AMCLAS,B.TCCDSC                                               :
  FROM SDFACTPD AS A                                                            :
  LEFT OUTER JOIN SDTCLSPD AS B                                                 :
        ON A.AMCLAS=B.TCCLAS                                                    :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas SD Facility Type Classes descriptions       ';                     :
