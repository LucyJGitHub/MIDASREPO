  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
**SELECT************************************************************************: BUG625
**********FROM*SDNOSTPD*********************************************************: BUG625
**SELECT*N.*,*N.A7CYCD*CONCAT N.A7NONB AS FULLNOST                              : BUG625     BUG3378
**********FROM SDNOSTPD AS N                                                    : BUG625     BUG3378
  SELECT                                                                        :            BUG3378
   N.*,                                                                         :            BUG3378
   CASE WHEN N.A7ACSN = 0 THEN '' ELSE DIGITS(N.A7ACSN) END as PADACSN,         :            BUG3378
***N.A7CYCD*CONCAT*N.A7NONB*AS*FULLNOST*****************************************:            BUG3378
**FROM*SDNOSTPD*AS*N;***********************************************************:            BUG3378
***N.A7CYCD*CONCAT*N.A7NONB*AS*FULLNOST,*B.BBCRNM,*B.BBCRTN,*C.ANAM*************:      CAP204 CSF011
   N.A7CYCD CONCAT N.A7NONB AS FULLNOST, B.BBCSSN, B.BBCRNM, B.BBCRTN,          :             CSF011
   C.ANAM, B.BBCSID                                                             :             CSF011
  FROM SDNOSTPD AS N                                                            :             CAP204
  LEFT JOIN SDCUSTPD AS B                                                       :             CAP204
   ON B.BBCUST = N.A7CUST                                                       :             CAP204
***AND*B.BBBRCD*=*N.A7BRCD***************************************************** :    CSF011 AR985708
  LEFT JOIN ACCNTAB AS C                                                        :             CAP204
   ON C.BRCA = N.A7BRCD AND C.CNUM = N.A7CUST AND C.CCY = N.A7CYCD              :             CAP204
   AND C.ACOD = N.A7ACCD AND C.ACSQ = N.A7ACSN;                                 :             CAP204
                                                                                :            BUG3378
 * DESCRIBESTART                                                                :            BUG3378
 * DESCRIBEFIELD PADACSN    AS A7ACSN     USING SDNOSTPD                        :            BUG3378
 * DESCRIBEEND                                                                  :            BUG3378
