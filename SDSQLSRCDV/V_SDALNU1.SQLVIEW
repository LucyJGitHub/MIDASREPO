  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (                                                                             :
  BCCUST,                                                                       :
  BCADCD)                                                                       :
  AS                                                                            :
  (SELECT                                                                       :
  SDALTNPD.BCCUST, SDALTNPD.BCADCD                                              :
  FROM SDALTNPD, SDCUSTPD                                                       :
  WHERE SDCUSTPD.BBCSTY = 'U'                                                   :
  AND SDALTNPD.BCCUST = SDCUSTPD.BBCUST                                         :
  ) ;                                                                           :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  (                                                                             :
  BCCUST  IS 'Customer ID'                ,                                     :
  BCADCD  IS 'Address Code');                                                   :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas SD Alternate Names and Address Universal    ';                     :
