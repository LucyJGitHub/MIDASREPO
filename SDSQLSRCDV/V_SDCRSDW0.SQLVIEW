/*******************************************************************************/
  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS (                                                                          :
  select A.*,B.*,C.*,                                                           :
  COALESCE(D1.EWCRSA,D2.EWCRSA) AS EWCRSA                                       :
  from V_GZCUSTPD A                                                             :
  LEFT JOIN GZSDCRSHPD B ON                                                     :
   A.BBCUST = B.CRCUST AND A.ZONE = B.CRZONE                                    :         
  LEFT JOIN GZSDCRSDPD C ON                                                     :
   A.BBCUST = C.CDCUST AND A.ZONE = C.CDZONE                                    :        
  LEFT JOIN V_GZSDCTW0 D1                                                       :
   ON D1.EWCTRR = C.CDCTRY AND C.CDCTRY != ''                                   :
      AND D1.A8ZONE = C.CDZONE                                                  :
  LEFT JOIN V_GZSDCTW0 D2                                                       :
   ON D2.EWCTRR = '' AND C.CDCTRY != ''                                         :
      AND D2.A8ZONE = C.CDZONE  )                                               :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas SD CRS Enquiry Listview - GZSDCRSHPD';                             :
                                                                                :
