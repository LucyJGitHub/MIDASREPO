      *
      ** Initialise work variables.
     C                   EVAL      IDx = 0
      *
      ** Validate Rating code.
      *
     C                   EXSR      SRValRatg
      *
      ** If an error has been found, set return code appropriately.
      ** Otherwise, update valid dile fields.
      *
     C                   IF        OKQLTY = 'N'
     C                   EVAL      RetCodeIn = 'ERROR'
     C                   ENDIF

     C                   IF        OKQLTY <> 'N'

     C                   IF        DDQLTY <> *BLANKS
     C                   MOVEL     DDQLTY        S1QLTY
     C                   ELSE
     C                   MOVE      *BLANKS       S1QLTY
     C                   ENDIF

     C                   ENDIF

     C                   RETURN
      *
      *****************************************************************
      /EJECT
      *****************************************************************
      *                                                               *
      *  SRValRatg - Validation for Rating Code                       *
      *                                                               *
      *****************************************************************
     C     SRValRatg     BEGSR

      *
      ** Question mark is valid only on repair and i/c screens input.
      *
     C     '?'           SCAN      DDQLTY                                 01

     C                   IF        *IN01 = *ON

     C                   IF        PMode = '*FRONT'
     C                   MOVE      'N'           OKQLTY
     C                   ADD       1             IDx
     C                   MOVEL     'DDQLTY'      FldNamXAr(IDx)
     C                   MOVEL     'SEA0313'     MsgIdXAr(IDx)
     C**********         MOVEL     DDQLTY        MsgDtaXAr(IDx)                             MD000091
     C                   EVAL      BLen = %Len(%Trim(DDQLTY))                               MD000091
     C                   EVAL      MsgDtaXAr(IDX) = LenStr +%TRIM(DDQLTY)                   MD000091
     C                   GOTO      ESRValRatg
     C                   ENDIF

     C                   EVAL      PReDsp = 'Y'
     C                   ENDIF

     C                   CALL      'AORATIR0'
     C                   PARM      *BLANKS       PRtcd
     C                   PARM      '*KEY   '     POptn
     C                   PARM      DDQLTY        PKeyI
     C     PBRATI        PARM      PBRATI        DSFDY

     C                   IF        PRtcd <> *BLANKS

     C                   IF        PRtcd = '*NOSEL '
     C                   EVAL      DDQLTY = *BLANKS
     C                   ELSE
     C                   ADD       1             Idx
     C                   MOVE      'N'           OKQLTY
     C                   MOVEL     'DDQLTY'      FldNamXAr(Idx)
     C                   MOVEL     'SEA0314'     MsgIdXAr(Idx)
     C                   ENDIF

     C                   ELSE

     C                   EVAL      DDQLTY = PDRATI

     C                   ENDIF

     C     ESRValRatg    ENDSR
