  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (VDRECI ,                                                                     :
   VDLCD ,                                                                      :
   VDCHTP ,                                                                     :
   VDLUID ,                                                                     :
   VDBRCD ,                                                                     :
   VDCNUM ,                                                                     :
   VDPTFR ,                                                                     :
   VDBLTY ,                                                                     :
   VDSESN ,                                                                     :
   VDBEDT ,                                                                     :
   VDSEQN ,                                                                     :
   VDNOMB ,                                                                     :
   VDBNAR ,                                                                     :
   VDBSTT ,                                                                     :
   VDEWIN ,                                                                     :
   VDCOLF ,                                                                     :
   VDCOLA )                                                                     :
   AS                                                                           :
   SELECT  VDRECI,   VDLCD,  VDCHTP,  VDLUID,  VDBRCD,  VDCNUM,  VDPTFR, VDBLTY,:
   VDSESN,  VDBEDT,  VDSEQN,  VDNOMB,  VDBNAR,  VDBSTT,  VDEWIN,  VDCOLF,       :
   VDCOLA FROM SEBLKPPD ;                                                       :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( VDRECI IS 'Rec                 Id' ,                                        :
   VDLCD IS 'Last                Change              Date' ,                    :
   VDCHTP IS 'Lst                 Chg                 Typ' ,                    :
   VDLUID IS 'User id' ,                                                        :
   VDBRCD IS 'Brch                Code' ,                                       :
   VDCNUM IS 'Customer            Number' ,                                     :
   VDPTFR IS 'Folio               ref' ,                                        :
   VDBLTY IS 'Blk                 Typ' ,                                        :
   VDSESN IS 'Security            Shortname' ,                                  :
   VDBEDT IS 'Blocked End Date' ,                                               :
   VDSEQN IS 'Block               Sequence            Number' ,                 :
   VDNOMB IS 'Blocked             Nominal' ,                                    :
   VDBNAR IS 'Blocked             Narrative' ,                                  :
   VDBSTT IS 'Block               from Date' ,                                  :
   VDEWIN IS 'Block               Error/Warning''Indic.' ,                      :
   VDCOLF IS 'Collateral Flag' ,                                                :
   VDCOLA IS 'Collateral Amount' ) ;                                            :
  LABEL ON COLUMN                                                               :
  **********/**********                                                         :
  ( VDRECI TEXT IS 'Record Id' ,                                                :
   VDLCD TEXT IS 'Last change date' ,                                           :
   VDCHTP TEXT IS 'Type of last change' ,                                       :
   VDLUID TEXT IS 'User id' ,                                                   :
   VDBRCD TEXT IS 'Branch Code - Alpha' ,                                       :
   VDCNUM TEXT IS 'Customer number' ,                                           :
   VDPTFR TEXT IS 'Portfolio reference' ,                                       :
   VDBLTY TEXT IS 'Block type' ,                                                :
   VDSESN TEXT IS 'Security shortname' ,                                        :
   VDBEDT TEXT IS 'Blocked End Date' ,                                          :
   VDSEQN TEXT IS 'Block Sequence Number' ,                                     :
   VDNOMB TEXT IS 'Blocked Nominal' ,                                           :
   VDBNAR TEXT IS 'Blocked Narrative' ,                                         :
   VDBSTT TEXT IS 'Block from Date' ,                                           :
   VDEWIN TEXT IS 'Block Error/Warning Indic.' ,                                :
   VDCOLF TEXT IS 'Collateral Flag' ,                                           :
   VDCOLA TEXT IS 'Collateral Amount' ) ;                                       :
