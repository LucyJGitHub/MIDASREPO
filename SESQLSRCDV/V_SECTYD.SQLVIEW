  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
        F1.* ,                                                                  :
********DIGITS(F1.ISSR)*AS*PADISSR,*********************************************:             CSD027
********CASE*WHEN*(F1.RSKC*>*0)*THEN********************************************:             CSD027
********DIGITS(F1.RSKC)*ELSE*''*END*AS*PADRSKC,*********************************:             CSD027
********CASE WHEN*(F1.LMGR*>*0)*THEN********************************************:             CSD027
********DIGITS(F1.LMGR) ELSE*''*END*AS*PADLMGR,*********************************:             CSD027
********CASE WHEN*(F1.PPAG*>*0)*THEN********************************************:             CSD027
********DIGITS(F1.PPAG) ELSE*''*END*AS*PADPPAG,*********************************:             CSD027
********CASE WHEN*(F1.GUAR*>*0)*THEN********************************************:             CSD027
********DIGITS(F1.GUAR)*ELSE*''*END*AS*PADGUAR,*********************************:             CSD027
               F1.ISSR  AS PADISSR,                                             :             CSD027
        CASE WHEN (F1.RSKC <> '') THEN                                          :             CSD027
               F1.RSKC  ELSE '' END AS PADRSKC,                                 :             CSD027
        CASE WHEN (F1.LMGR <> '') THEN                                          :             CSD027
               F1.LMGR  ELSE '' END AS PADLMGR,                                 :             CSD027
        CASE WHEN (F1.PPAG <> '') THEN                                          :             CSD027
               F1.PPAG  ELSE '' END AS PADPPAG,                                 :             CSD027
        CASE WHEN (F1.GUAR <> '') THEN                                          :             CSD027
               F1.GUAR  ELSE '' END AS PADGUAR,                                 :             CSD027
        CASE WHEN (F1.SIDY > 0) THEN                                            :
        DIGITS(F1.SIDY) ELSE '' END AS PADSIDY,                                 :
        CASE WHEN (F1.WEIC > 0) THEN                                            :
        DIGITS(F1.WEIC) ELSE '' END AS PADWEIC,                                 :
   CASE WHEN F1.SLCA=0 THEN NULL ELSE DATE(F1.SLCA+719892) END AS FSLCA,        :            BUG2265
   CASE WHEN F1.IDIV=0 THEN NULL ELSE DATE(F1.IDIV+719892) END AS FIDIV,        :            BUG2265
   CASE WHEN F1.LCPN=0 THEN NULL ELSE DATE(F1.LCPN+719892) END AS FLCPN,        :            BUG2265
   CASE WHEN F1.MATY=0 THEN NULL ELSE DATE(F1.MATY+719892) END AS FMATY,        :            BUG2265
   CASE WHEN F1.ITLD=0 THEN NULL ELSE DATE(F1.ITLD+719892) END AS FITLD,        :            BUG2265
   CASE WHEN F1.FCPN=0 THEN NULL ELSE DATE(F1.FCPN+719892) END AS FFCPN,        :            BUG2265
   CASE WHEN F1.NCHD=0 THEN NULL ELSE DATE(F1.NCHD+719892) END AS FNCHD,        :            BUG2265
   CASE WHEN F1.ISSD=0 THEN NULL ELSE DATE(F1.ISSD+719892) END AS FISSD,        :            BUG2265
   CASE WHEN F1.DCOM=0 THEN NULL ELSE DATE(F1.DCOM+719892) END AS FDCOM,        :            BUG2265
   CASE WHEN F1.ORED=0 THEN NULL ELSE DATE(F1.ORED+719892) END AS FORED,        :            BUG2265
   CASE WHEN F1.NDVD=0 THEN NULL ELSE DATE(F1.NDVD+719892) END AS FNDVD,        :            BUG2265
   CASE WHEN F1.SCPD=0 THEN NULL ELSE DATE(F1.SCPD+719892) END AS FSCPD,        :            BUG2265
   CASE WHEN F1.LCD=0 THEN NULL ELSE DATE(F1.LCD+719892) END AS FLCD,           :            BUG2265
   CASE WHEN F1.NCD=0 THEN NULL ELSE DATE(F1.NCD+719892) END AS FNCD,           :            BUG2265
   CASE WHEN F1.LPRU=0 THEN NULL ELSE DATE(F1.LPRU+719892) END AS FLPRU,        :            BUG2265
        F2.PROT                                                                 :
 FROM SECTYD AS F1                                                              :
 LEFT JOIN INVTPD AS F2 ON F2.CCYI = F1.NMCY                                    :
*AND*F2.INVT*=*F1.SITP********                                                  :            BUG2265
 AND F2.INVT = F1.SITP;                                                         :            BUG2265
                                                                                :            BUG2265
