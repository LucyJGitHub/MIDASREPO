             PGM
 
             DCL        VAR(&MODE) TYPE(*CHAR) LEN(1)
 
             COPYRIGHT TEXT('(c) Finastra International Limited +
                          2005')
 
/** Global monitor message **/
             MONMSG     MSGID(CPF0000 MCH0000 RPG0000) EXEC(GOTO +
                          CMDLBL(ABNOR))
 
             CHGVAR     VAR(&MODE) VALUE('U')
 
/* Copy LEFHST to temporary input file. */
             CPYF       FROMFILE(LEFHST) TOFILE(SMU005PD) +
                          MBROPT(*REPLACE)
             MONMSG     MSGID(CPF2817) CMPDTA(CPF2869) EXEC(DO)
                GOTO       CMDLBL(END)
             ENDDO
             MONMSG     MSGID(CPF2817 CPF2909) EXEC(DO)
                GOTO       CMDLBL(ABNOR)
             ENDDO
 
/*********** CALL       PGM(SMU000103) PARM(&MODE)      */                              /*MD033801*/
             CALL       PGM(SMU00103) PARM(&MODE)                                       /*MD033801*/
             IF         COND(%SWITCH(XXXXXX11)) THEN(DO)
                GOTO       CMDLBL(ABNOR)
             ENDDO
 
/* If successful, copy new updated file back.*/
             CPYF       FROMFILE(SMU005PD) TOFILE(LEFHST) +
                          MBROPT(*REPLACE)
             MONMSG     MSGID(CPF2817 CPF2909) EXEC(DO)
                GOTO       CMDLBL(ABNOR)
             ENDDO
 
             GOTO       CMDLBL(END)
 
 ABNOR:
             CHGJOB     SWS(XXXXXX11)
 END:
             ENDPGM
