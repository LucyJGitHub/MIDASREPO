             PGM

             DCL        VAR(&QUOTE) TYPE(*CHAR) LEN(1) VALUE('''')
             DCL        VAR(&STM_STR) TYPE(*CHAR) LEN(80)
             DCL        VAR(&RTCD) TYPE(*CHAR) LEN(7)                                   /*MD057289*/
             DCL        VAR(&OPTN) TYPE(*CHAR) LEN(7) +
                          VALUE('*FIRST')                                               /*MD057289*/
             DCL        VAR(&SDMMOD) TYPE(*CHAR) LEN(128)                               /*MD057289*/

             COPYRIGHT TEXT('(c) Finastra International Limited +
                          2005')

/* Global monitor message */
             MONMSG     MSGID(CPF0000 MCH0000 RPG0000) EXEC(GOTO +
                          CMDLBL(ERROR))

             CALL       PGM(AOMMODR0) PARM(&RTCD &OPTN &SDMMOD)                         /*MD057289*/
/**/                                                                                    /*MD057289*/
/* Database error  */                                                                   /*MD057289*/
/**/                                                                                    /*MD057289*/
             IF         COND(&RTCD *NE '       ') THEN(DO)                              /*MD057289*/
                SNDPGMMSG  MSG('Error on access to ICD file +
                              SDMMODPD') TOMSGQ(MOPERQ)                                 /*MD057289*/
                CHGJOB     JOB(XXXXXX11)                                                /*MD057289*/
                GOTO       CMDLBL(ERROR)                                                /*MD057289*/
             ENDDO                                                                      /*MD057289*/
/**/                                                                                    /*MD057289*/
/* Check if Analytical Accounting module is installed  */                               /*MD057289*/
/**/                                                                                    /*MD057289*/
             IF         COND(%SST(&SDMMOD 100 1) *EQ 'Y') THEN(DO)                      /*MD057289*/
/* Build string to delete record. */
             CHGVAR     VAR(&STM_STR) VALUE('update ACCNTAB set +
                          PRFC =' *BCAT &QUOTE *BCAT &QUOTE *BCAT +
                          'where PRFC <>' *BCAT &QUOTE *BCAT &QUOTE +
                          *BCAT 'and ATYP <>' *BCAT &QUOTE *TCAT +
                          'R' *TCAT &QUOTE *BCAT 'and ATYP <>' +
                          *BCAT &QUOTE *TCAT 'N' *TCAT &QUOTE)
/* Call standard program to write to source file ... */
             CALL       PGM(UTWRTSQL) PARM(&STM_STR '*CLEAR')
/* ... and run the SQL. */
             RUNSQLSTM  SRCFILE(QTEMP/RUNSQL) SRCMBR(RUNSQLSTM) +
                          COMMIT(*NONE)
             ENDDO                                                                      /*MD057289*/
/**/                                                                                    /*MD057289*/

             GOTO       CMDLBL(END)

ERROR:
             CHGJOB     SWS(XXXXXX11)

END:         ENDPGM
