                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    PFILE                                                                       :
  , LIB                                                                         :
  , LAYR                                                                        :
  , PFMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.PFILE                                                                  :
     , c.LIB                                                                    :
     , c.LAYR                                                                   :
     , c.PFMODE                                                                 :
  from SMFITCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.PFILE                                                                  :
     , b.LIB                                                                    :
     , b.LAYR                                                                   :
     , b.PFMODE                                                                 :
  from SMFITBTD b                                                               :
                                                                                :
  rcdfmt SMFITUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SM File Index Packed to Alphanumeric   Union';                     :
