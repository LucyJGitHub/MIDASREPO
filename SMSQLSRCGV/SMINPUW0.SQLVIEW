                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    IZMODE                                                                      :
  , IZFILE                                                                      :
  , IZPROG                                                                      :
  , IZCPGM                                                                      :
  , IZCLRF                                                                      :
  , IZPTY                                                                       :
  , IZPARM                                                                      :
  , IYMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.IZMODE                                                                 :
     , c.IZFILE                                                                 :
     , c.IZPROG                                                                 :
     , c.IZCPGM                                                                 :
     , c.IZCLRF                                                                 :
     , c.IZPTY                                                                  :
     , c.IZPARM                                                                 :
     , c.IYMODE                                                                 :
  from SMINPCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.IZMODE                                                                 :
     , b.IZFILE                                                                 :
     , b.IZPROG                                                                 :
     , b.IZCPGM                                                                 :
     , b.IZCLRF                                                                 :
     , b.IZPTY                                                                  :
     , b.IZPARM                                                                 :
     , b.IYMODE                                                                 :
  from SMINPBTD b                                                               :
                                                                                :
  rcdfmt SMINPUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SM Programs called to initialise files Union';                     :
