                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    RLPROD                                                                      :
  , RLRLS                                                                       :
  , RLSRLS                                                                      :
  , RLUPMB                                                                      :
  , RLUPFL                                                                      :
  , RLUPTX                                                                      :
  , RLMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.RLPROD                                                                 :
     , c.RLRLS                                                                  :
     , c.RLSRLS                                                                 :
     , c.RLUPMB                                                                 :
     , c.RLUPFL                                                                 :
     , c.RLUPTX                                                                 :
     , c.RLMODE                                                                 :
  from SMRLSCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.RLPROD                                                                 :
     , b.RLRLS                                                                  :
     , b.RLSRLS                                                                 :
     , b.RLUPMB                                                                 :
     , b.RLUPFL                                                                 :
     , b.RLUPTX                                                                 :
     , b.RLMODE                                                                 :
  from SMRLSBTD b                                                               :
                                                                                :
  rcdfmt SMRLSUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas SM Release levels                      Union';                     :
