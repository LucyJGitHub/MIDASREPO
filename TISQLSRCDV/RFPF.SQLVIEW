  CREATE VIEW                                                                   :
  **********/**********                                                         :
  AS                                                                            :
  SELECT                                                                        :
  'EUR' AS RFGCY, A6CYCD AS RFMCY, A6EUER AS RFFRT,                             :
  CASE A6MDIN WHEN 'D' THEN 'Y' ELSE 'N' END AS RFRCR,                          :
  ((YEAR(DATE(A6TPSD+719892)) - 1900) * 10000) +                                :
  (MONTH(DATE(A6TPSD+719892)) * 100) +                                          :
  DAY(DATE(A6TPSD+719892)) AS RFIDT,                                            :
  ((YEAR(DATE(A6TPED+719892)) - 1900) * 10000) +                                :
  (MONTH(DATE(A6TPED+719892)) * 100) +                                          :
  DAY(DATE(A6TPED+719892)) AS RFRDT,                                            :
  ((YEAR(DATE(A6LCD+719892))  - 1900) * 10000) +                                :
  (MONTH(DATE(A6LCD+719892)) * 100)  +                                          :
  DAY(DATE(A6LCD+719892))  AS RFDLM                                             :
  FROM SDCURRPD WHERE A6INCY = 'Y';                                             :
