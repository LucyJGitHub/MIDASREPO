             PGM        PARM(&LAYER &PFX &RTNFLAG)
 
             DCL        VAR(&LAYER) TYPE(*CHAR) LEN(7)
             DCL        VAR(&PFX) TYPE(*CHAR) LEN(2)
             DCL        VAR(&RTNFLAG) TYPE(*CHAR) LEN(1)
 
             DCL        VAR(&SBSD) TYPE(*CHAR) LEN(10)
             DCL        VAR(&RNMSBSD) TYPE(*CHAR) LEN(10)
 
             COPYRIGHT TEXT('(c) Finastra International Limited +
                          2004')
 
/* Global monitor message. */
             MONMSG     MSGID(CPF0000 MCH0000 RPG0000) EXEC(GOTO +
                          CMDLBL(ERROR))
 
             IF         COND(&LAYER *EQ '*GLOBAL') THEN(DO)
                CHGVAR     VAR(&SBSD) VALUE('M' *TCAT &PFX *TCAT 'GSBS')
             ENDDO
             IF         COND(&LAYER *EQ '*ZONE') THEN(DO)
                CHGVAR     VAR(&SBSD) VALUE('M' *TCAT &PFX *TCAT 'SBS')
             ENDDO
 
             CHGVAR     VAR(&RNMSBSD) VALUE('X' *TCAT &SBSD)
 
/* Check if subsystem has been renamed. */
             CHKOBJ     OBJ(&SBSD) OBJTYPE(*SBSD)
             MONMSG     MSGID(CPF9801) EXEC(DO)
                RNMOBJ     OBJ(&RNMSBSD) OBJTYPE(*SBSD) NEWOBJ(&SBSD)
             ENDDO
 
/* Attempt to end the subsystem first. */
             ENDSBS     SBS(&SBSD) OPTION(*IMMED)
             MONMSG     MSGID(CPF1054)
 
             STRSBS     SBSD(&SBSD)
             MONMSG     MSGID(CPF1010)
 
             GOTO       CMDLBL(ENDPGM)
ERROR:
             CHGVAR     VAR(&RTNFLAG) VALUE('E')
 
ENDPGM:
             ENDPGM
