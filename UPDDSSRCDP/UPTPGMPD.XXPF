     A                                      TEXT('End Process component seq')
     A                                      COLHDG('End' 'Process' 'comp seq')
     A            CBESTK    R               REFFLD(CCOT)
     A                                      TEXT('End Sub-task component')
     A                                      COLHDG('End' 'Sub-task' 'component')
     A            CBESTS    R               REFFLD(SEQNO)
     A                                      TEXT('End Sub-task component seq')
     A                                      COLHDG('End' 'Sub-task' 'comp seq')
     A            CBESPT    R               REFFLD(CCOT)
     A                                      TEXT('End Split component')
     A                                      COLHDG('End Split' 'component')
     A            CBESPS    R               REFFLD(SEQNO)
     A                                      TEXT('End Split component sequence')
     A                                      COLHDG('End Split' 'component' +
     A                                           'sequence')
