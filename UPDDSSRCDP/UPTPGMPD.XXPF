     A                                      TEXT('Sub-task component sequence')
     A                                      COLHDG('Sub-task' 'component' 'seq')
     A            CBEPRC    R               REFFLD(CCOT)
     A                                      TEXT('End Process component')
     A                                      COLHDG('End' 'Process' 'component')
