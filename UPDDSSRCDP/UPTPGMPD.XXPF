     A                                      TEXT('Start Split component')
                                            COLHDG('Start' 'Split' 'Component')
     A            CBSTRS    R               REFFLD(SEQNO)
     A                                      TEXT('Start Split component seq')
                                            COLHDG('Start' 'Split' 'Comp. seq')
     A            CBSRVP    R               REFFLD(CCOT)
     A                                      TEXT('Server component')
     A                                      COLHDG('Server' 'component')
     A            CBSRVS    R               REFFLD(SEQNO)
     A                                      TEXT('Server component sequence')
     A                                      COLHDG('Server' 'component' 'seq')
     A            CBSTSK    R               REFFLD(CCOT)
     A                                      TEXT('Sub-task component')
     A                                      COLHDG('Sub-task' 'component')
