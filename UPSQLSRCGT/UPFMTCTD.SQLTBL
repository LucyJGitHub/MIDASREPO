  rcdfmt UPFMTCD0;                                                              :
                                                                                :
  label on table **********/**********                                          :
    is 'Midas UP Files with shared formats - main core    ';                    :
                                                                                :
  label on column **********/**********                                         :
  (                                                                             :
     FSFILE text is 'File sharing a format'                                     :
   , FSFSHD text is 'File with format shared'                                   :
                                                                                :
   , FSMODE text is 'Core or bespoke'                                           :
                                                                                :
   , FSTYPE text is 'Type of file shared'                                       :
   , FSSFMT text is 'Name of format shared'                                     :
   , FSLAYR text is 'Layer'                                                     :
                                                                                :
   , FSIPTY text is 'Priority default'                                          :
   , FSDEL  text is 'Logically deleted default'                                 :
  );                                                                            :
                                                                                :
  label on column **********/**********                                         :
  (                                                                             :
     FSFILE is 'File                Sharing'                                    :
   , FSFSHD is 'File                Shared'                                     :
                                                                                :
   , FSMODE is 'Core                Or                  Bespoke'                :
                                                                                :
   , FSTYPE is 'Type'                                                           :
   , FSSFMT is 'Format              Shared'                                     :
   , FSLAYR is 'Layer'                                                          :
                                                                                :
   , FSIPTY is 'Pty.                Dft.'                                       :
   , FSDEL  is 'Log.                Del.                Dft.'                   :
  );                                                                            :
