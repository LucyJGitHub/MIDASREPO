     FILE_SHARING_A_FORMAT               for column FSFILE char(10)   not null  :
   , FILE_WITH_FMT_SHARED                for column FSFSHD char(10)   not null  :
                                                                                :
   , CORE_OR_BESPOKE                     for column FSMODE char(1)    not null  :
                                                                                :
