                                                                                :
  create view                                                                   :
  **********/**********                                                         :
  (                                                                             :
    DDSNWF                                                                      :
  , DDSLYR                                                                      :
  , DDSORF                                                                      :
  , DDSSPI                                                                      :
  , DDSRPT                                                                      :
  , DDSMIG                                                                      :
  , DDMODE                                                                      :
  )                                                                             :
  as                                                                            :
  select                                                                        :
       c.DDSNWF                                                                 :
     , c.DDSLYR                                                                 :
     , c.DDSORF                                                                 :
     , c.DDSSPI                                                                 :
     , c.DDSRPT                                                                 :
     , c.DDSMIG                                                                 :
     , c.DDMODE                                                                 :
  from UPDDSCTD c                                                               :
                                                                                :
  union all                                                                     :
  select                                                                        :
       b.DDSNWF                                                                 :
     , b.DDSLYR                                                                 :
     , b.DDSORF                                                                 :
     , b.DDSSPI                                                                 :
     , b.DDSRPT                                                                 :
     , b.DDSMIG                                                                 :
     , b.DDMODE                                                                 :
  from UPDDSBTD b                                                               :
                                                                                :
  rcdfmt UPDDSUT0 ;                                                             :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas UP Deliverable Data Split file data    Union';                     :
