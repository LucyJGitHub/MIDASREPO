  CREATE VIEW                                                                   :
  **********/**********                                                         :
  (EVAPIN, EVFLDN, EVERCD, EVMSGF, EVSEVT, EVDESC)                              :
                                                                                :
  AS SELECT DISTINCT                                                            :
                                                                                :
  FCDPGM,                                                                       :
  FINERD,                                                                       :
  FMSGID,                                                                       :
  FMSGFU,                                                                       :
  FETYPE,                                                                       :
  FDESCN                                                                        :
                                                                                :
  FROM UTFINFPD                                                                 :
                                                                                :
  WHERE FMSGID <> ' ' AND                                                       :
  (FETYPE = 'E' OR FETYPE = 'W') AND                                            :
  FMSGFU <> 'GB' AND                                                            :
  FDESCN <> ' ' AND FDESCN <> '*ERROR - Message not found'                      :
/*******************************************************************************/
 ;                                                                              :
  label on table     **********/**********                                      :
   is 'Midas UT Error Codes Input View                   ';                     :
                                                                                :
