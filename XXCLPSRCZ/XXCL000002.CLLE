             PGM        PARM(&RTNCDE &MODE)

             DCL        VAR(&RTNCDE) TYPE(*CHAR) LEN(7)
             DCL        VAR(&MODE)   TYPE(*CHAR) LEN(1)
             DCL        VAR(&CPYFLD) TYPE(*CHAR) LEN(64) VALUE('(c) +
                          Finastra International Limited 2016          ')

/* Global monitor message */

             MONMSG     MSGID(CPF0000 MCH0000 RPG0000) EXEC(GOTO CMDLBL(ABNOR))

             SNDPGMMSG  MSG('XXCL000002 - Update field IMDFN FBM') +
                          TOMSGQ(MRUNQ)

/* Call the update program                       */

             CALL       PGM(XXL000002)

             GOTO CMDLBL(END)

/* Abnormal Termination  */

ABNOR:
             CHGJOB     SWS(XXXXXX11)

               SNDPGMMSG MSGID(CPF9898) MSGF(QCPFMSG) MSGDTA('Program +
                          XXCL000002 ended abnormally - see job log') +
                            TOMSGQ(MOPERQ)
               ROLLBACK
               MONMSG     MSGID(CPF0000 MCH0000)

/* End Program           */
END:
               CHGVAR     VAR(&CPYFLD) VALUE('(c) Finastra International Limtied')

             ENDPGM
