                                                                                :
  create view                                                                   :
  **********/**********                                                         :
                                                                                :
  (                                                                             :
       @@CND                                                                    :
     , CNDTYP                                                                   :
     , EXTVAL                                                                   :
     , INTVAL                                                                   :
     , CNDTXT                                                                   :
     , USRMOD                                                                   :
     , VALMAP                                                                   :
     , CBMODE                                                                   :
  )                                                                             :
  as select                                                                     :
       u.@@CND                                                                  :
     , u.CNDTYP                                                                 :
     , u.EXTVAL                                                                 :
     , u.INTVAL                                                                 :
     , u.CNDTXT                                                                 :
     , u.USRMOD                                                                 :
     , u.VALMAP                                                                 :
     , x.CBMODE                                                                 :
  from CBVLLUW0 u                                                               :
                                                                                :
  join                                                                          :
                                                                                :
  CBVLLXTD x                                                                    :
  on                                                                            :
      u.@@CND  = x.@@CND  and u.CNDTYP = x.CNDTYP and u.EXTVAL = x.EXTVAL       :
      and u.INTVAL = x.INTVAL                                                   :
                                                                                :
  rcdfmt CBVLLJT0;                                                              :
                                                                                :
  label on table     **********/**********                                      :
   is 'Midas CB Condition value list Joint             ';                       :
