       b.@@CND                                                                  :
     , b.CNDTYP                                                                 :
     , b.EXTVAL                                                                 :
     , b.INTVAL                                                                 :
     , b.CNDTXT                                                                 :
     , b.USRMOD                                                                 :
     , b.VALMAP                                                                 :
     , b.CBMODE                                                                 :
  from CBVLLBTD b                                                               :
