     , x.MODU                                                                   :
     , x.TRTY                                                                   :
     , x.FNOR                                                                   :
     , x.TNBF                                                                   :
     , x.LCD                                                                    :
     , x.CHTP                                                                   :
     , x.TNLU                                                                   :
